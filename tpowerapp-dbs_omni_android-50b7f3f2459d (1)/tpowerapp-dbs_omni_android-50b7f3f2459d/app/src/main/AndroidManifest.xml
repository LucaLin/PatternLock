<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dbs.omni.tw">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 為了大頭照 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- touch-id -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <!-- 撥號 -->
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <!-- [START gcm_permission] -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />



    <application
        android:name=".setted.OmniApplication"
        tools:replace="android:icon,android:allowBackup"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <data android:scheme="dbsommi"></data>

                <category android:name="android.intent.category.BROWSABLE"></category>
                <category android:name="android.intent.category.DEFAULT"></category>

                <action android:name="android.intent.action.VIEW"></action>
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.NoAnimation"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".controller.setting.editProfile.changeUserData.ChangeUserDataActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation" />
        <activity
            android:name=".controller.setting.editProfile.modifyNicknameAndAva.ModifyNicknameAndAvaActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".controller.setting.editProfile.modifyNicknameAndAva.CropImageActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation" />
        <activity
            android:name=".controller.setting.contactDBS.ContactDBSActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation" />
        <activity
            android:name=".controller.setting.applyCreditCard.ApplyCreditCardActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation" />
        <activity
            android:name=".controller.setting.touchid.TouchIDActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation" />
        <activity
            android:name=".controller.home.CreditCardunBilledListActivity"
            android:theme="@style/AppTheme.NoActionBar.NoTransparent.ActivityAnimation" />
        <activity
            android:name=".controller.register.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.AnimationInputMethod"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".controller.setting.forget.ForgetActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.AnimationInputMethod"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".controller.payment.bank.BankPaymentActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".controller.payment.convenient.ConvenientStorePaymentActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".controller.home.CreditCardActiveActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.AnimationInputMethod"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".controller.installment.unbilled.UnbilledInstallmentActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".controller.installment.setting.InstallmentSettingActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".controller.bill.PDFReaderActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".controller.logout.LogoutActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".controller.setting.editProfile.EditProfileActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent.ActivityAnimation" />

        <receiver android:name=".gcm.TimeoutReceiver" />
        <!--<service android:name="com.dbs.omni.tw.service.OnClearFromRecentService"-->
            <!--android:enabled="true"-->
                    <!--android:exported="false"-->
                    <!--android:stopWithTask="false" />-->

        <!-- GCM 相關 -->
        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <!-- If you want to support pre-4.4 KitKat devices, add the following action to the intent filter declaration for the receiver -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.dbs.omni.tw" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->


        <!-- [START gcm_listener] -->
        <service
            android:name=".gcm.WalletGcmListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener] -->
        <!-- [START instanceId_listener] -->
        <service
            android:name=".gcm.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->
        <service
            android:name=".gcm.RegistrationIntentService"
            android:exported="false"/>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>