<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tw.controller.setting.editProfile.changeUserData.AddressModifyFragment"
    android:focusableInTouchMode="true">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/x4">

                <com.dbs.omni.tw.element.InputTextView
                    android:id="@+id/inputText_OldAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:inputTextType="Display">
                </com.dbs.omni.tw.element.InputTextView>

                <com.dbs.omni.tw.element.InputTextView
                    android:id="@+id/inputText_PostCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </com.dbs.omni.tw.element.InputTextView>

                <com.dbs.omni.tw.element.InputTextView
                    android:id="@+id/inputText_NewCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:inputTextType="City">
                </com.dbs.omni.tw.element.InputTextView>

                <com.dbs.omni.tw.element.InputTextView
                    android:id="@+id/inputText_NewRegion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:inputTextType="Region">
                </com.dbs.omni.tw.element.InputTextView>

                <com.dbs.omni.tw.element.InputTextView
                    android:id="@+id/inputText_NewAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </com.dbs.omni.tw.element.InputTextView>

            </LinearLayout>

        <RelativeLayout
            style="@style/BottomButtonsBackground">

            <Button
                android:id="@+id/btnNextStep"
                style="@style/BottomButtonWithBackground"
                android:text="@string/button_next" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
