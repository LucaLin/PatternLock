<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayBackground"
    tools:context=".tw.controller.setting.editProfile.modifyNicknameAndAva.ModifyNicknameAndAvaActivity"
    android:focusableInTouchMode="true">

    <include layout="@layout/appbar"
        android:id="@+id/include" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x4"
        android:paddingBottom="@dimen/x4"
        android:layout_below="@+id/include">

        <!--<ImageView-->
            <!--android:id="@+id/image_avatar"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--app:srcCompat="@drawable/ic_ava_default" />-->

        <com.dbs.omni.tw.view.CircleImageView
            android:id="@+id/image_avatar"
            android:layout_width="@dimen/x16"
            android:layout_height="@dimen/x16"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_ava_default"
            />

        <TextView
            android:id="@+id/text_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_avatar"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="TextView" />

        <TextView
            android:id="@+id/btn_change_ava"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x5"
            android:layout_below="@+id/text_nickname"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_oval_button"
            android:gravity="center"
            android:text="@string/change_avatar"
            android:textColor="@color/colorRedPrimary" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/btnSave"
        android:layout_below="@+id/relativeLayout"
        android:paddingLeft="@dimen/x4"
        android:paddingRight="@dimen/x4"
        android:background="@color/colorOpacityWhite">

        <com.dbs.omni.tw.element.InputTextView
            android:id="@+id/inputText_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:inputTextType="NickName">
        </com.dbs.omni.tw.element.InputTextView>

        <TextView
            android:id="@+id/txtHint"
            style="@style/CommonShowHint"
            android:text="@string/edit_profile_hint" />
    </LinearLayout>


    <Button
        android:id="@+id/btnSave"
        style="@style/BottomButtonWithBackground"
        android:layout_alignParentBottom="true"
        android:text="@string/button_save" />

</RelativeLayout>
