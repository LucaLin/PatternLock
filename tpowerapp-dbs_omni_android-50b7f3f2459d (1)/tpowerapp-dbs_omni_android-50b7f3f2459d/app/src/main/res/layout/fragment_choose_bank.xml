<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tw.controller.payment.bank.ChooseBankFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x2"
            android:background="@color/colorGrayBackground">

            <SearchView
                android:id="@+id/SearchView_bank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/appbar_height"
                android:background="@color/colorSearchBarGrey">

            </SearchView>
        </RelativeLayout>

        <ListView
            android:id="@+id/bankListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x4"
            android:paddingRight="@dimen/x4"/>


    </LinearLayout>

</FrameLayout>
