<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tw.controller.setting.editProfile.changeUserData.PasswordModifyFragment"
    android:focusableInTouchMode="true">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x4"
            android:paddingRight="@dimen/x4">

            <com.dbs.omni.tw.element.InputTextView
                android:id="@+id/inputText_OldMima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:inputTextType="Password">
            </com.dbs.omni.tw.element.InputTextView>

            <!--<EditText-->
            <!--android:id="@+id/edtNewPassword"-->
            <!--style="@style/CommonEditText"-->
            <!--android:ems="30"-->
            <!--android:hint="@string/input_new_password"-->
            <!--android:inputType="textVisiblePassword" />-->

            <com.dbs.omni.tw.element.InputTextView
                android:id="@+id/inputText_NewMima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:inputTextType="Password">
            </com.dbs.omni.tw.element.InputTextView>

            <!--<EditText-->
            <!--android:id="@+id/edtNewPassword2"-->
            <!--style="@style/CommonEditText"-->
            <!--android:ems="30"-->
            <!--android:hint="@string/input_new_password_again"-->
            <!--android:inputType="textVisiblePassword" />-->

            <com.dbs.omni.tw.element.InputTextView
                android:id="@+id/inputText_NewMima_Again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:inputTextType="Password">
            </com.dbs.omni.tw.element.InputTextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/x4">

                <com.dbs.omni.tw.element.SymbolItem
                    android:id="@+id/length_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textContent="@string/mina_length_and_other_limit"/>

                <com.dbs.omni.tw.element.SymbolItem
                    android:id="@+id/upper_not_equal_to_lower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textContent="@string/mima_upper_not_equal_to_lower"/>

                <com.dbs.omni.tw.element.SymbolItem
                    android:id="@+id/not_has_same_and_continuous_char"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textContent="@string/mima_not_has_same_and_continuous_char"/>

                <com.dbs.omni.tw.element.SymbolItem
                    android:id="@+id/can_not_same_account_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textContent="@string/mina_can_not_same_account_limit"/>

                <com.dbs.omni.tw.element.SymbolItem
                    android:id="@+id/can_not_set_specialsymbols"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textContent="@string/account_can_not_set_specialsymbols_or_blanks"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout style="@style/BottomButtonsBackground">

            <Button
                android:id="@+id/btnNextStep"
                style="@style/BottomButtonWithBackground"
                android:text="@string/button_next" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
