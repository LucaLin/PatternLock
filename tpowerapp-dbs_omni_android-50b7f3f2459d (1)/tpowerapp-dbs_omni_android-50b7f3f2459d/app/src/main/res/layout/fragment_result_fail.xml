<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tw.controller.result.ResultFailFragment">

    <!-- 上層 -->
    <LinearLayout
        android:id="@+id/linearLayout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRedPrimary"
        android:orientation="vertical"
        android:paddingBottom="22dp"
        android:paddingLeft="@dimen/x4"
        android:paddingRight="@dimen/x4"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/textView_up"
            style="@style/CommonText.TransferPanelStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/input_text" />


        <TextView
            android:id="@+id/textView_down"
            style="@style/CommonText.TransferPanelStatus2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_content_title" />

    </LinearLayout>


    <!-- 下層固定按鈕 -->

    <LinearLayout
        android:id="@+id/linearLayout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">


        <RelativeLayout style="@style/BottomButtonsBackground">

            <Button
                android:id="@+id/btnFinished"
                style="@style/BottomButtonWithBackground"
                android:text="@string/finished" />

        </RelativeLayout>

    </LinearLayout>


    <!-- 中間項目 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_below="@id/linearLayout_top"
        android:layout_above="@id/linearLayout_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x4"
            android:paddingRight="@dimen/x4">

            <com.dbs.omni.tw.element.SymbolItem
                android:id="@+id/textView_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
