<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/payment_button_height"
        android:background="@drawable/bg_box">

        <TextView
            android:id="@+id/textView_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/CommonText.PaymentButtonMainTitle" />

        <ImageView
            android:id="@+id/imageView_icon"
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/x10"
            android:layout_above="@+id/textView_main_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x4" />

        <TextView
            android:id="@+id/textView_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_main_title"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/x2"
            style="@style/CommonTitleText" />


    </RelativeLayout>
</RelativeLayout>
