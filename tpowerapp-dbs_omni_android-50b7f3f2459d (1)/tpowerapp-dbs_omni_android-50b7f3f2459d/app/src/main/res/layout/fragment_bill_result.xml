<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tw.controller.payment.PaymentHomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x4"
                android:paddingRight="@dimen/x4">
                <!-- 第一列 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/consumption_item_paddingTop"
                    android:paddingTop="@dimen/consumption_item_paddingTop"
                    android:background="@drawable/bg_bottom_line"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CommonText.General.GrayPrimaryMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/checkout_date_of_bill" />

                        <TextView
                            android:id="@+id/text_checkout_date"
                            style="@style/CommonText.Large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/x2"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CommonText.General.GrayPrimaryMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/deadline_of_payment" />

                        <TextView
                            android:id="@+id/text_deadline"
                            style="@style/CommonText.Large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x2" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 第二列 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/consumption_item_paddingTop"
                    android:paddingTop="@dimen/consumption_item_paddingTop"
                    android:background="@drawable/bg_bottom_line"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CommonText.General.GrayPrimaryMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/min_amount_title" />

                        <TextView
                            android:id="@+id/text_min_amount"
                            style="@style/CommonText.Large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/x2"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CommonText.General.GrayPrimaryMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/credits" />

                        <TextView
                            android:id="@+id/text_credits"
                            style="@style/CommonText.Large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x2" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 第三列 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/consumption_item_paddingTop"
                    android:paddingTop="@dimen/consumption_item_paddingTop"
                    android:background="@drawable/bg_bottom_line"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CommonText.General.GrayPrimaryMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/recycling_credit_annual_interest_rate" />

                        <TextView
                            android:id="@+id/text_recycling_credit_annual_interest_rate"
                            style="@style/CommonText.Large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x2" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/text_entry_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x4"
                    android:paddingBottom="@dimen/x4"
                    android:text="入帳日期  2017/01/06 - 2017/02/05"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <!--<ListView-->
        <!--android:id="@+id/list_bill"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="vertical"-->
        <!--android:divider="@android:color/transparent"-->
        <!--android:dividerHeight="0dp"-->
        <!--android:background="@android:color/white">-->

    <!--</ListView>-->
</FrameLayout>
