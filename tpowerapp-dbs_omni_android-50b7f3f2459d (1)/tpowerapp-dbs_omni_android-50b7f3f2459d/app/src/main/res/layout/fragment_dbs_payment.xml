<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tw.controller.payment.bank.DBSPaymentFragment"
    android:focusableInTouchMode="true">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/upside_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingBottom="@dimen/x3">

            <ImageView
                android:id="@+id/image_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_marginTop="@dimen/x15"
                app:srcCompat="@drawable/ic_red_arror" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/image_arrow"
                android:layout_marginTop="@dimen/x2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@id/image_arrow">

                    <Button
                        android:id="@+id/imageView_payment_left"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_payment_upside_button" />

                    <Button
                        android:id="@+id/button_animation"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/payment_button_animation" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textView_left_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:gravity="center"
                    style="@style/CommonText.General"/>

                <TextView
                    android:id="@+id/textView_left_middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:gravity="center"
                    style="@style/CommonTitleText"/>

                <TextView
                    android:id="@+id/textView_left_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:gravity="center"
                    style="@style/CommonText.General"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_toRightOf="@id/image_arrow"
                android:layout_marginTop="@dimen/x2"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/button_payment_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@id/image_arrow">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_payment_upside_button_card" />

                    <Button
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/textView_right_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:gravity="center"
                    style="@style/CommonText.General"/>

                <TextView
                    android:id="@+id/textView_right_middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:gravity="center"
                    style="@style/CommonTitleText"/>

                <TextView
                    android:id="@+id/textView_right_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:gravity="center"
                    style="@style/CommonText.General"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/upside_relativeLayout"
            android:layout_above="@+id/relativeLayoutBottom"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x4"
            android:paddingRight="@dimen/x4"
            android:background="@android:color/white">

            <com.dbs.omni.tw.element.InputTextView
                android:id="@+id/inputText_payment_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textTitle="@string/payment_price"
                app:hasSelectButton="true"
                app:inputTextType="Amount"
                app:AmountSign="@string/amount_sign">
            </com.dbs.omni.tw.element.InputTextView>

            <com.dbs.omni.tw.element.SymbolItem
                android:id="@+id/textView_hint_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutBottom"
            style="@style/BottomButtonsBackground">

            <Button
                android:id="@+id/btnNextStep"
                style="@style/BottomButtonWithBackground"
                android:text="@string/button_next" />

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
