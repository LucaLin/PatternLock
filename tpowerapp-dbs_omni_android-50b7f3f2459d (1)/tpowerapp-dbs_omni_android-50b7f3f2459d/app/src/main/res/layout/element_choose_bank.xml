<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/x5"
    android:paddingTop="@dimen/x5">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_bank_icon"
            android:layout_width="@dimen/image_height_by_list"
            android:layout_height="@dimen/image_height_by_list"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_choose_bank_default" />

        <TextView
            android:id="@+id/text_bank_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:textSize="@dimen/choose_bank_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/relativeLayout"
        android:layout_marginLeft="@dimen/x4"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_balance_not_enough"
                style="@style/CommonText.General.GrayPrimaryMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/text_account_name"
                style="@style/CommonText.General"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/text_amount"
                android:ellipsize="end"
                android:maxLines="1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x2"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_balance"
                style="@style/CommonText.General.GrayPrimaryMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text_account_number"
                style="@style/CommonText.General.GrayPrimaryMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/text_foreign"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>