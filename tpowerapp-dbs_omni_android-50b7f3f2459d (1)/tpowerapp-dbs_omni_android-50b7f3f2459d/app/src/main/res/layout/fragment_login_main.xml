<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tw.controller.login.LoginMainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tw.controller.login.LoginActivity">

        <ImageView
            android:id="@+id/image_Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:background="@drawable/dbs_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x3"
            android:layout_below="@id/image_Logo"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="@dimen/login_title_text_size"
                android:text="@string/login_title"
                />

            <TextView
                android:id="@+id/text_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="normal"
                android:textColor="@android:color/white"
                android:textSize="@dimen/login_subtitle_text_size"
                android:text="@string/login_subtitle"
                />

        </LinearLayout>


        <Button
            android:id="@+id/button_login"
            style="@style/LoginButtonWithBackground"
            android:layout_below="@+id/image_Logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="249dp"
            android:text="@string/login" />


    </RelativeLayout>

</FrameLayout>
