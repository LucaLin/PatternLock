<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/button_card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@drawable/ic_card_face_temp"/>

        <ImageButton
            android:id="@+id/image_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@drawable/mask_card_selected"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_card_name"
        style="@style/CommonText.General.GrayPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x1"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:text="DBS Eminent VISA 白金卡白金卡白金卡白金卡白金卡白金卡白金卡白金卡白金卡白金卡"
        android:textColorLink="@color/colorGrayPrimaryMedium"
        android:drawableLeft="@drawable/ic_card_arrow"
        android:drawablePadding="@dimen/x1" />

</LinearLayout>
