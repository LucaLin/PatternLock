<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="actionBarSize">@dimen/appbar_height</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.AppToolbar.Menu</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 設定客製activity轉場動畫 -->


        <!--<item name="android:windowAnimationStyle">@null</item>-->
        <!--從右至左-->
        <!--<item name="android:windowAnimationStyle">@style/ActivityAnimation</item>-->
        <!--從下往上彈出-->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item> -->
    </style>

    <style name="AppTheme.NoActionBar.LargeMenu">
        <!-- 設定大一點的Menu字體 -->
        <item name="android:actionMenuTextAppearance">@style/AppTheme.AppToolbar.Menu.Large</item>
    </style>

    <!-- 自訂status bar ＆ toolbar不是透明的主題 -->
    <style name="AppTheme.NoActionBar.NoTransparent" parent="AppTheme.NoActionBar">
        <!--action bar 內容底色-->
        <item name="colorPrimary">@color/colorGrayBackground</item>
        <!-- status bar 底色 -->
        <item name="colorPrimaryDark">@android:color/black</item>
        <!--<item name="titleTextStyle">@style/AppTheme.AppToolbar.White.Title</item>-->
        <!--window 底色-->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.NoTransparent.NoAnimation" parent="AppTheme.NoActionBar.NoTransparent">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.NoTransparent.ActivityAnimation" parent="AppTheme.NoActionBar.NoTransparent">
        <!--從右至左-->
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="AppTheme.NoActionBar.NoTransparent.AnimationInputMethod" parent="AppTheme.NoActionBar.NoTransparent">
        <!--從下往上彈出-->
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
    </style>


    <!-- 自訂status bar ＆ toolbar都是透明的主題 -->
    <style name="AppTheme.NoActionBar.Transparent" parent="AppTheme.NoActionBar">
        <!--action bar 內容底色-->
        <item name="colorPrimary">@android:color/transparent</item>
        <!-- status bar 底色 -->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!--<item name="titleTextStyle">@style/AppTheme.AppToolbar.Title</item>-->
        <!--window 底色-->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.Transparent.NoAnimation" parent="AppTheme.NoActionBar.Transparent">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.Transparent.ActivityAnimation" parent="AppTheme.NoActionBar.Transparent">
        <!--從右至左-->
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="AppTheme.NoActionBar.Transparent.AnimationInputMethod" parent="AppTheme.NoActionBar.Transparent">
        <!--從下往上彈出-->
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
    </style>

    <!-- toolbar標題 -->
    <style name="AppTheme.AppToolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!--<item name="android:textColor">@color/colorGrayPrimaryDark</item>-->
        <item name="android:textColor">@color/colorGrayPrimaryDark</item>
        <item name="android:textSize">@dimen/subheading_text_size</item>
    </style>

    <style name="AppTheme.AppToolbar.White.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/subheading_text_size</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- menu項目 -->
    <!-- 一般menu項目 -->
    <style name="AppTheme.AppToolbar.Menu" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>
    <!-- 字體較大的menu項目 -->
    <style name="AppTheme.AppToolbar.Menu.Large" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>


    <!-- 客製activity轉場動畫 -->
    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/out_right_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_left_to_right</item>
        <item name="android:activityCloseExitAnimation">@anim/out_left_to_right</item>
    </style>


    <!-- 主按鈕文字大小與對齊 -->
    <style name="CommonButton">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <!-- 主按鈕 -->
    <style name="CommonButtonWithBackground" parent="CommonButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InputTextSelect" parent="CommonButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorSelectButtonText</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!-- Login按鈕 -->
    <style name="LoginButtonWithBackground">
        <item name="android:layout_width">@dimen/button_login_width</item>
        <item name="android:layout_height">@dimen/button_login_height</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <!-- 輸入頁面下方按鈕 -->
    <style name="BottomButtonWithBackground" parent="CommonButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/x4</item>
    </style>

    <!-- 輸入頁面下方按鈕的灰底背景 -->
    <style name="BottomButtonsBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_background_height</item>
        <item name="android:background">@color/colorGrayBackground</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- OTP -->
    <style name="ResendButtonWithBackground">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/otp_resume_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 同意條款 -->
    <style name="CommonAgreeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/agree_note_text</item>
        <item name="android:clickable">true</item>
    </style>

    <!--主文字-->
    <style name="CommonTitleText">
        <item name="android:textColor">@color/colorGrayPrimaryMedium</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="CommonText">
        <item name="android:textColor">@color/colorGrayPrimaryDark</item>
        <!--<item name="android:textSize">@dimen/content_text_size</item>-->
    </style>

    <style name="CommonText.General" parent="CommonText">
        <item name="android:textColor">@color/colorGrayPrimaryDark</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="CommonText.Large" parent="CommonText">
        <item name="android:textColor">@color/colorGrayPrimaryDark</item>
        <item name="android:textSize">@dimen/subheading_text_size</item>
    </style>

    <style name="CommonText.ExtraLarge" parent="CommonText">
        <item name="android:textColor">@color/colorGrayPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CommonText.General.GrayPrimaryMedium" parent="CommonText.General">
        <item name="android:textColor">@color/colorGrayPrimaryMedium</item>
    </style>

    <style name="CommonText.General.Yellow" parent="CommonText.General">
        <item name="android:textColor">@color/card_list_type_text_color</item>
    </style>

    <style name="CommonText.Small" parent="CommonText">
        <item name="android:textColor">@color/colorGrayPrimaryMedium</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="CommonText.Small.GrayPrimaryDark" parent="CommonText.Small">
        <item name="android:textColor">@color/colorGrayPrimaryMedium</item>
    </style>


    <style name="CommonText.TransferPanelStatus">
        <item name="android:textColor">@color/colorGrayPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CommonText.TransferPanelStatus2">
        <item name="android:textColor">@color/colorOpacityWhite</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CommonText.TransferPanelTitle">
        <item name="android:textColor">@color/colorRedPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CommonText.PaymentButtonMainTitle">
        <item name="android:textColor">@color/colorGrayPrimary</item>
        <item name="android:textSize">@dimen/payment_button_maintitle_size</item>
    </style>

    <!--<style name="CommonTitleTextOnCard">-->
        <!--<item name="android:textColor">@android:color/white</item>-->
        <!--<item name="android:textSize">18sp</item>-->
    <!--</style>-->

    <!--<style name="CommonTitleTextOnCard.SubTitle" parent="CommonTitleTextOnCard">-->
        <!--<item name="android:textSize">@dimen/content_text_size</item>-->
    <!--</style>-->


    <style name="CommonInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/x4</item>
        <item name="android:paddingRight">@dimen/x4</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/colorGrayPrimaryDark</item>
        <item name="android:textColorHint">@color/colorGrayPrimaryMedium</item>
    </style>

    <style name="CommonShowText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/colorGrayPrimaryDark</item>
        <item name="android:background">@drawable/bg_bottom_line</item>
    </style>

    <style name="CommonShowHint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">@dimen/x4</item>
        <item name="android:paddingBottom">@dimen/x4</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/colorGrayPrimaryMedium</item>
    </style>


    <!-- Animation for dialog box -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_down_animation</item>
    </style>

    <style name="DialogAnimation.Top">
        <item name="android:windowEnterAnimation">@anim/slide_down_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_up_animation</item>
    </style>

    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!--Dialog-->
    <style name="FullWidthThemeDialog" parent="android:style/Theme.Material.Light.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

</resources>
