<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    android:orientation="vertical"
    tools:context="com.example.r30_a.testlayout.cellBean.CellBeanCheckingActivity">

    <android.support.v7.widget.Toolbar
        style="@style/AppTheme.Toolbar"
        app:title="驗證圖型密碼" />

    <com.example.r30_a.testlayout.cellBean.PatternIndicatorView
        android:id="@+id/checkindicatorView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:piv_color="@color/colorWhite"
        app:piv_errorColor="@color/color_red"
        app:piv_hitColor="@color/colorPrimary"
        app:plv_color="@color/colorWhite" />

    <TextView
        android:id="@+id/txvcheckmsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="msg"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp" />


    <com.example.r30_a.testlayout.cellBean.PatternLockView
        android:id="@+id/checkpatternlockview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:plv_color="@color/colorWhite"
        app:plv_errorColor="@color/color_red"
        app:plv_fillColor="@android:color/holo_green_light"
        app:plv_hitColor="@color/colorPrimary"
        app:plv_lineWidth="2dp" />

</LinearLayout>
