<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- 底色根據level變色 -->
        <level-list>
            <item
                android:maxLevel="@integer/edit_level_correct"
                android:minLevel="@integer/edit_level_normal" >
                <shape>
                    <solid android:color="@android:color/white" />
                    <corners android:radius="@dimen/edit_text_corner" />
                    <!-- 加入透明的框線，讓填滿的背景色不會超出框線 -->
                    <stroke android:color="@android:color/transparent"
                        android:width="@dimen/edit_text_stroke_width"/>
                </shape>
            </item>
            <item android:maxLevel="@integer/edit_level_error"
                android:minLevel="@integer/edit_level_error" >
                <shape>
                    <solid android:color="#FFE8E9" />
                    <corners android:radius="@dimen/edit_text_corner" />
                    <!-- 加入透明的框線，讓填滿的背景色不會超出框線 -->
                    <stroke android:color="@android:color/transparent"
                        android:width="@dimen/edit_text_stroke_width"/>
                </shape>
            </item>
        </level-list>
    </item>
    <item>
        <!-- 外框根據元件狀態變色 -->
        <selector>
            <item android:state_focused="true" >
                <shape>
                    <!-- 設定用透明填滿背景色，某些版本沒給背景色會用黑色填滿 -->
                    <solid android:color="@android:color/transparent" />
                    <stroke android:color="@color/edit_text_stroke_focused"
                        android:width="@dimen/edit_text_stroke_width"/>
                    <corners android:radius="@dimen/edit_text_corner" />
                </shape>
            </item>
            <item>
                <shape >
                    <!-- 設定用透明填滿背景色，某些版本沒給背景色會用黑色填滿 -->
                    <solid android:color="@android:color/transparent" />
                    <stroke android:color="@color/edit_text_stroke"
                        android:width="@dimen/edit_text_stroke_width"/>
                    <corners android:radius="@dimen/edit_text_corner" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>

