<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:bottom="@dimen/dialog_bg_corner">
        <shape>
            <corners android:topLeftRadius="@dimen/dialog_bg_corner" android:topRightRadius="@dimen/dialog_bg_corner"/>
            <solid android:color="@color/dialog_bg_top" />
            <size android:height="@dimen/dialog_bg_top_height" />
        </shape>
    </item>
    <item android:top="@dimen/dialog_bg_top_height">
        <shape>
            <corners android:bottomLeftRadius="@dimen/dialog_bg_corner" android:bottomRightRadius="@dimen/dialog_bg_corner"/>
            <solid android:color="@color/dialog_bg_content" />
            <padding android:top="@dimen/dialog_padding_top"
                android:bottom="@dimen/dialog_padding_bottom"/>
        </shape>
    </item>
</layer-list>