<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp">

    <!-- 多一層layout指定高度 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="18dp"
        android:background="@drawable/img_system_messages">
        <!-- 頭像 -->
        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="@dimen/list_photo_size"
            android:layout_height="@dimen/list_photo_size"
            android:background="@drawable/img_taishin_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="9dp" />

        <!-- 未讀取的圖示 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_new_message_notification"
            android:layout_alignRight="@id/image_photo"
            android:layout_alignTop="@id/image_photo"
            android:layout_marginTop="7dp"
            android:id="@+id/image_new"
            android:visibility="gone"/>

        <!-- 上方訊息標題 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_envelope_list_name_text"
            android:textSize="@dimen/red_envelope_list_name_textsize"
            android:text="內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容"
            android:id="@+id/text_message"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image_photo"
            android:layout_marginLeft="5dp"
            android:singleLine="false"
            android:lines="3"
            android:ellipsize="end"/>

        <!-- 第二排的時間 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_envelope_list_time_text"
            android:textSize="@dimen/red_envelope_list_time_textsize"
            android:text="2015/12/12 00:00"
            android:id="@+id/text_time"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignLeft="@id/text_message"
            android:layout_below="@id/text_message"/>

    </RelativeLayout>
</RelativeLayout>