<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 多一層layout指定高度 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <!-- 頭像 -->
        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="@dimen/list_photo_size"
            android:layout_height="@dimen/list_photo_size"
            android:background="@drawable/img_default_photo_gary_dark"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <!-- 是否交易成功 -->
        <ImageView
            android:layout_width="@dimen/checkbox_button_size"
            android:layout_height="@dimen/checkbox_button_size"
            android:src="@drawable/ic_red_popup_succeed"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/image_result" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_photo"
            android:layout_toLeftOf="@id/image_result"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginLeft="8dp">

            <!-- 名字 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:id="@+id/text_name"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorGrayPrimaryDark"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Kevin Yeh"
                android:textStyle="bold"/>

            <!-- 轉帳帳號 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:id="@+id/layout_account">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/colorGrayPrimaryDark"
                    android:singleLine="true"
                    android:text="@string/transfer_account"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/text_account"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/colorGrayPrimaryDark"
                    android:singleLine="true"
                    android:text="1234-567-891-0123" />
            </LinearLayout>

            <!-- 轉帳金額 -->
            <LinearLayout
                android:id="@+id/layout_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/colorGrayPrimaryDark"
                    android:singleLine="true"
                    android:text="@string/transfer_amount"
                    android:id="@+id/text_amount_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/text_amount"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorGoldPrimary"
                    android:singleLine="true"
                    android:text="$800" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>