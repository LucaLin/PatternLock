<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="22.5dp"
    android:paddingRight="22.5dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_main">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="18dp"
                android:textSize="20sp"
                android:textColor="@color/sv_result_title_success"
                android:text="@string/extra_my_coupon_trade_success"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/btn_custom_white_shape"
                android:paddingLeft="13.5dp"
                android:paddingRight="13.5dp"
                android:paddingBottom="20dp">

                <!-- Send Date -->
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:textColor="#C2C2C2"
                    android:text="2016/11/19 16:49"/>

                <!-- 大頭圖像 -->
                <ImageView
                    android:id="@+id/img_coupon_banner"
                    android:layout_width="288dp"
                    android:layout_height="288dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_banner_default"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="9dp"/>


                <!-- Coupon title Area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:id="@+id/txt_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="17sp"
                        android:textColor="@color/colorGrayPrimaryDark"
                        android:text="玉米濃湯"/>
                    <TextView
                        android:id="@+id/txt_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"
                        android:textColor="@color/colorGrayPrimaryDark"
                        android:text="好幾碗"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_money_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/txt_dollar_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="6dp"
                        android:textSize="20sp"
                        android:textColor="@color/colorGrayPrimaryDark"
                        android:text="@string/dollar_sign"/>
                    <TextView
                        android:id="@+id/txt_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textSize="40sp"
                        android:textColor="@color/colorGrayPrimaryDark"
                        android:text="1,200"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/img_sv_result"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_coupon_shop_succeed"/>
                </FrameLayout>

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </FrameLayout>

            <Button
                android:id="@+id/btn_next"
                android:text="@string/extra_my_coupon_back_to_list"
                style="@style/CommonButtonWithBackground"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/fab_margin"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
