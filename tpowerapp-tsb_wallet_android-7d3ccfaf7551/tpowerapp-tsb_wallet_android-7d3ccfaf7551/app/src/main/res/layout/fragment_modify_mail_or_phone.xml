<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <!-- 上方的標題 -->
        <include layout="@layout/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/headline_vertical_margin"
            android:layout_marginBottom="@dimen/headline_vertical_margin"
            android:id="@+id/headline" />

        <!-- 分隔線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_divider_height"
            android:background="@color/content_divider" />

        <RelativeLayout
            android:id="@+id/recyclerlayout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <!-- 手機號碼 -->
            <!-- 標題 -->
            <TextView
                style="@style/FieldTitle"
                android:text="@string/modify_phone_text"
                android:layout_alignParentTop="true"
                android:id="@+id/text_cellphone"/>
            <!-- 輸入框 -->
            <EditText
                android:id="@+id/edit_cellphone"
                style="@style/CommonEditText"
                android:inputType="number"
                android:maxLength="@integer/cellphone_maxlength"
                android:layout_below="@id/text_cellphone"/>
            <!-- 錯誤訊息 -->
            <TextView
                android:id="@+id/text_cellphone_error"
                style="@style/FieldError"
                android:layout_alignTop="@id/edit_cellphone"
                android:visibility="gone" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recyclerlayout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <!-- 電子信箱 -->
            <!-- 標題 -->
            <TextView
                style="@style/FieldTitle"
                android:id="@+id/text_email"
                android:text="@string/modify_email_text"
                android:layout_alignParentTop="true"/>
            <!-- 輸入框 -->
            <EditText
                android:id="@+id/edit_email"
                style="@style/CommonEditText"
                android:inputType="textEmailAddress"
                android:layout_below="@id/text_email"/>
            <!-- 錯誤訊息 -->
            <TextView
                android:id="@+id/text_email_error"
                style="@style/FieldError"
                android:layout_alignTop="@id/edit_email"
                android:visibility="gone" />


        </RelativeLayout>

        <!-- 下一步按鈕 -->
        <Button
            android:id="@+id/button_next"
            android:text="@string/button_send"
            style="@style/CommonButtonWithBackground"
            android:layout_marginTop="@dimen/button_first_margin_top" />

        <!-- 注意事項 -->
        <LinearLayout
            android:id="@+id/lyt_caution_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/button_first_margin_top" >

            <TextView
                android:id="@+id/txt_caution_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/bottom_text"
                android:text="@string/sv_caution_title"/>

            <TextView
                android:id="@+id/txt_caution_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="13dp"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/bottom_text"
                android:text="@string/modify_notice"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>