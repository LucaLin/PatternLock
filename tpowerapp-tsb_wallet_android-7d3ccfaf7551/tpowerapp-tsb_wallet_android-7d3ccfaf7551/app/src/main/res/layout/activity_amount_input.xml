<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context=".controller.red.AmountInputActivity">

    <!-- 上方標題與選單 -->
    <include layout="@layout/appbar" />

    <!-- 主要畫面內容 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <!-- 頭像與名字(或文字) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- R-E-46 的頭像、名字(n) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/layout_account_info"
                    android:layout_marginBottom="@dimen/headline_vertical_margin">
                    <!-- 頭像 -->
                    <ImageView
                        android:layout_width="@dimen/list_photo_size"
                        android:layout_height="@dimen/list_photo_size"
                        android:id="@+id/image_photo"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/img_default_photo_gold_dark" />
                    <!-- 名字...(n) -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_photo"
                        android:gravity="center"
                        android:layout_marginTop="4dp">
                        <!-- (n) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"
                            android:id="@+id/text_names_number"
                            android:textSize="@dimen/name_text_size"
                            android:textColor="@android:color/white"
                            android:singleLine="true"
                            android:text="(5000)"
                            android:layout_alignParentRight="true" />
                        <!-- 名字... -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/text_names"
                            android:textSize="@dimen/name_text_size"
                            android:textColor="@android:color/white"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="Kevin Yeh, Anna Wu, Rich Chang, Amo Chen, John Lee, Miko Lai"
                            android:layout_toLeftOf="@id/text_names_number"/>
                    </RelativeLayout>

                </LinearLayout>
                <!-- R-E-48、49 的標題文字 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/text_title"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>
            </FrameLayout>
            <!-- 輸入框、提示訊息與數字鍵 -->
            <include layout="@layout/inputfield_and_number_pad" />

            <!-- 最下方的按鈕 -->
            <Button
                style="@style/RedEnvelopeButtonWithBackground"
                android:id="@+id/button_next"
                android:text="@string/register_next"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
