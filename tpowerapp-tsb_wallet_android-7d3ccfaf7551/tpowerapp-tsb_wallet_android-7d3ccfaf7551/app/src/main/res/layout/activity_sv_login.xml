<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 上方客製的toolbar -->
    <include layout="@layout/appbar"/>

    <!-- 頁面內容 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <!-- 上方的標題 -->
            <include layout="@layout/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="@dimen/headline_vertical_margin"
                android:id="@+id/headline"/>

            <!-- 分隔線 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/content_divider_height"
                android:background="@color/content_divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <!-- 身份證號碼 -->
                <!-- 標題 -->
                <TextView
                    android:id="@+id/text_userid"
                    android:layout_alignParentTop="true"
                    style="@style/FieldTitle"
                    android:text="@string/login_userid"
                    android:layout_marginTop="20dp" />
                <!-- 輸入框 -->
                <EditText
                    android:id="@+id/edit_userid"
                    style="@style/CommonEditText"
                    android:maxLength="@integer/userid_maxlength"
                    android:textAllCaps="true"
                    android:digits="@string/characters_number_capital_only"
                    android:inputType="textEmailAddress|textCapCharacters"
                    android:layout_below="@id/text_userid"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:singleLine="true"
                    android:cursorVisible="false"
                    android:password="true" />
                <!-- 錯誤訊息 -->
                <TextView
                    android:id="@+id/text_userid_error"
                    style="@style/FieldError"
                    android:layout_alignTop="@id/edit_userid"
                    android:visibility="gone"  />

                <!-- 使用者代號 -->
                <!-- 標題 -->
                <TextView
                    android:id="@+id/text_username"
                    android:layout_below="@id/edit_userid"
                    style="@style/FieldTitle"
                    android:layout_marginTop="20dp"
                    android:text="@string/sv_login_username" />
                <!-- 輸入框 -->
                <EditText
                    android:id="@+id/edit_username"
                    style="@style/CommonEditText"
                    android:maxLength="@integer/username_sv_maxlength"
                    android:textAllCaps="true"
                    android:digits="@string/characters_number_letter_only"
                    android:layout_below="@id/text_username"
                    android:inputType="textPassword"/>
                <!-- 錯誤訊息 -->
                <TextView
                    android:id="@+id/text_username_error"
                    style="@style/FieldError"
                    android:layout_alignTop="@id/edit_username"
                    android:visibility="gone"  />

                <!-- 密碼 -->
                <!-- 標題 -->
                <TextView
                    android:id="@+id/text_password"
                    style="@style/FieldTitle"
                    android:text="@string/sv_login_password"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/edit_username"/>
                <!-- 輸入框 -->
                <EditText
                    android:id="@+id/edit_password"
                    style="@style/CommonEditText"
                    android:maxLength="@integer/password_sv_maxlength"
                    android:digits="@string/characters_number_letter_only"
                    android:inputType="textPassword"
                    android:layout_below="@id/text_password"/>
                <!-- 錯誤訊息 -->
                <TextView
                    android:id="@+id/text_password_error"
                    style="@style/FieldError"
                    android:layout_alignTop="@id/edit_password"
                    android:visibility="gone"  />

            </RelativeLayout>

            <!-- 登入按鈕 -->
            <Button
                android:id="@+id/button_login"
                android:text="@string/register_next"
                style="@style/CommonButtonWithBackground"
                android:layout_marginTop="@dimen/button_first_margin_top"/>

            <!-- 文字連結 -->
            <TextView
                android:id="@+id/text_register_sv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/sv_login_register_text"
                android:textColorLink="@color/colorRedPrimary"
                android:textColor="@color/button_text_color_dark"
                android:textSize="@dimen/text_size_medium"/>

            <!-- 最下面的聯絡客服按鈕 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/button_customer_service"
                android:layout_height="@dimen/button_height"
                android:gravity="center"
                android:layout_marginTop="@dimen/button_login_register_margin" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call" />
                <TextView
                    android:text="@string/sv_login_customer_service"
                    style="@style/CommonButtonNoBackground" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
