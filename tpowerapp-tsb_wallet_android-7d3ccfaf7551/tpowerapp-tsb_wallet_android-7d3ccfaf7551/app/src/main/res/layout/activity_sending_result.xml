<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context=".controller.red.SendingResultActivity">

    <!-- 上方標題與選單 -->
    <include layout="@layout/appbar" />

    <!-- 主要畫面內容 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <!-- 最下方的按鈕 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/button_bar">

            <!-- 紅包首頁 -->
            <Button
                style="@style/RedEnvelopeButtonWithBackgroundSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/button_left"
                android:text="@string/title_red_envelope"/>
            <!-- 我的紅包 -->
            <Button
                style="@style/RedEnvelopeButtonWithBackgroundSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:id="@+id/button_right"
                android:text="@string/my_red_envelope"/>
        </LinearLayout>

        <!-- 發送結果、頭像、人名、金額、祝福語、紅包詳情鈕 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/button_bar"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 發送結果 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@android:color/white"
                        android:singleLine="true"
                        android:text="@string/sent_result_success"
                        android:id="@+id/text_result"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/activity_vertical_margin"/>

                    <!-- 紅包內容與背景（包含可隱藏的多個紅包） -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_result">

                        <!-- 多個紅包背景 -->
                        <!-- TODO 換成真正的背景 -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/layout_multi_bg_envelope"
                            android:visibility="invisible">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter"
                                android:src="@drawable/img_red_05"
                                android:layout_marginLeft="43dp"
                                android:layout_marginRight="43dp"
                                android:layout_gravity="top"/>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter"
                                android:layout_marginTop="50dp"
                                android:src="@drawable/img_red_06"
                                android:layout_marginLeft="14dp"
                                android:layout_marginRight="14dp"
                                android:layout_gravity="top"/>
                        </FrameLayout>

                        <!-- 空的view與紅包內容 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- 空的view，用來把紅包內容往下推 -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                android:id="@+id/view_top_empty"
                                android:visibility="gone"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/img_red_big_detail_red_envelope"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp">

                                <!-- 頭像 -->
                                <ImageView
                                    android:layout_width="@dimen/list_photo_size"
                                    android:layout_height="@dimen/list_photo_size"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="38dp"
                                    android:background="@drawable/img_default_photo_gary_dark__shadow"
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/image_photo" />

                                <!-- 發送對象... (n) -->
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/image_photo"
                                    android:gravity="center"
                                    android:id="@+id/layout_name">
                                    <!-- (n) -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical|left"
                                        android:id="@+id/text_names_number"
                                        android:textSize="@dimen/text_size_medium"
                                        android:textColor="@color/colorGoldPrimaryLight"
                                        android:singleLine="true"
                                        android:text="(5000)"
                                        android:layout_alignParentRight="true" />
                                    <!-- 發送對象... -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:id="@+id/text_names"
                                        android:textSize="@dimen/text_size_medium"
                                        android:textColor="@color/colorGoldPrimaryLight"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        android:text="給Amy Chang"
                                        android:layout_toLeftOf="@id/text_names_number"/>
                                </RelativeLayout>

                                <!-- 發送成功時，顯示金額與祝福語 -->
                                <!-- 發送金額 -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/layout_name"
                                    android:layout_centerHorizontal="true"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="3dp"
                                    android:id="@+id/layout_amount">
                                    <!-- $符號 -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_size_large"
                                        android:textColor="@color/colorGoldPrimaryLight"
                                        android:layout_marginRight="6dp"
                                        android:text="$"/>
                                    <!-- 金額 -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/text_amount"
                                        android:textSize="40sp"
                                        android:textColor="@color/colorGoldPrimaryLight"
                                        android:text="80,000"/>
                                </LinearLayout>

                                <!-- 祝福語和底線 -->
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/layout_amount"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginRight="40dp"
                                    android:id="@+id/layout_blessing">

                                    <!-- 文字的背景底線 -->
                                    <tw.com.taishinbank.ewallet.view.TextViewWithUnderLine
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@android:color/transparent"
                                        android:id="@+id/text_blessing_line"
                                        android:textSize="16sp"
                                        android:lines="@integer/red_envelope_sent_result_blessing_lines"
                                        android:lineSpacingExtra="7dp"/>

                                    <!-- 祝福語 -->
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal|top"
                                        android:id="@+id/text_blessing"
                                        android:textSize="16sp"
                                        android:textColor="@color/colorGoldPrimary"
                                        android:text="一二三四五六七八九十...一二三四五六七八九十一二三四五六七八九十一二三四五六七八九十一二三四五六七八九十"
                                        android:lines="@integer/red_envelope_sent_result_blessing_lines"
                                        android:lineSpacingExtra="7dp"
                                        android:ellipsize="end"/>
                                </FrameLayout>


                                <!-- 發送失敗或有錯誤時，顯示圖示與錯誤訊息 -->
                                <!-- 錯誤或警告圖示 -->
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_red_title_envelope_big_failed"
                                    android:layout_centerHorizontal="true"
                                    android:layout_below="@id/layout_name"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/image_warning"
                                    android:visibility="invisible"/>

                                <!-- 錯誤或警告訊息 -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:id="@+id/text_error_message"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorGoldPrimary"
                                    android:text="error"
                                    android:layout_below="@id/image_warning"
                                    android:includeFontPadding="false"
                                    android:lines="4"
                                    android:maxWidth="243dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:lineSpacingExtra="6dp"
                                    android:visibility="invisible"/>


                                <!-- 紅包詳情鈕 -->
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/button_detail"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorGoldPrimary"
                                    android:text="@string/red_envelope_detail"
                                    android:background="?android:selectableItemBackground"
                                    android:layout_below="@id/layout_blessing"
                                    android:layout_centerHorizontal="true"
                                    android:drawableRight="@drawable/ic_red_envelope_more"
                                    android:drawablePadding="8dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </FrameLayout>

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
