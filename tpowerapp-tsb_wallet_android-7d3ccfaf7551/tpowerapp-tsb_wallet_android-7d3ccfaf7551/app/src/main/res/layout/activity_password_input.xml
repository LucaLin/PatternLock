<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context=".controller.red.PasswordInputActivity">

    <!-- 上方標題與選單 -->
    <include layout="@layout/appbar" />

    <!-- 主要畫面內容 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <!-- 分隔線與文字-轉入 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/headline_vertical_margin">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_red_font_divider"
                    android:layout_gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/transfer_to"
                    android:textColor="@color/red_envelope_divider_text"
                    android:textSize="@dimen/text_size_normal"/>
            </FrameLayout>

            <!-- 轉入資訊：頭像、名字與轉帳金額 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal" >
                <!-- 頭像 -->
                <ImageView
                    android:layout_width="@dimen/list_photo_size"
                    android:layout_height="@dimen/list_photo_size"
                    android:id="@+id/image_photo"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/img_default_photo_gold_dark" />
                <!-- 名字...(n) -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_photo"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="4dp">
                    <!-- (n) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:id="@+id/text_names_number"
                        android:textSize="@dimen/name_text_size"
                        android:textColor="@android:color/white"
                        android:singleLine="true"
                        android:text="(5000)"
                        android:layout_alignParentRight="true" />
                    <!-- 名字... -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/text_names_to"
                        android:textSize="@dimen/name_text_size"
                        android:textColor="@android:color/white"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="Kevin Yeh, Anna Wu, Rich Chang, Amo Chen, John Lee, Miko Lai"
                        android:layout_toLeftOf="@id/text_names_number"/>
                </RelativeLayout>

                <!-- 轉帳金額 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:textColor="@android:color/white"
                        android:singleLine="true"
                        android:layout_marginRight="6dp"
                        android:text="@string/transfer_total"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/text_amount"
                        android:textSize="28sp"
                        android:textColor="@android:color/white"
                        android:singleLine="true"
                        android:text="800" />
                </LinearLayout>
            </LinearLayout>

            <!-- 分隔線與文字-轉出 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/headline_vertical_margin" >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_red_font_divider"
                    android:layout_gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/transfer_from"
                    android:textColor="@color/red_envelope_divider_text"
                    android:textSize="@dimen/text_size_normal"/>
            </FrameLayout>


            <!-- 轉出資訊：名字、帳號 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal" >

                <!-- 轉出者的名字 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/text_name_from"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:singleLine="true"
                    android:text="陳大維"/>

                <!-- 轉出帳號 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/text_account"
                    android:textSize="17sp"
                    android:textColor="@android:color/white"
                    android:singleLine="true"
                    android:text="轉出帳號：0000-000-000-0000"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="14dp"/>
            </LinearLayout>

            <!-- 密碼輸入框與錯誤訊息 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- 輸入框 -->
                <EditText
                    android:id="@+id/edit_password"
                    style="@style/CommonEditText"
                    android:maxLength="@integer/password_sv_maxlength"
                    android:digits="@string/characters_number_letter_only"
                    android:inputType="textPassword"
                    android:hint="請輸入儲值帳戶密碼"/>
                <!-- 錯誤訊息 -->
                <TextView
                    android:id="@+id/text_password_error"
                    style="@style/FieldError"
                    android:layout_alignTop="@id/edit_password"
                    android:visibility="invisible"  />
            </RelativeLayout>

            <!-- 驗證碼顯示與輸入 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- 顯示驗證碼 -->
                <FrameLayout
                    android:layout_width="174dp"
                    android:layout_height="46dp"
                    android:id="@+id/layout_captcha"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true">
                    <!-- 整個按鈕圖 -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_captcha"
                        android:background="@android:color/transparent"
                        android:id="@+id/button_refresh"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!-- 空白view，為了讓驗證碼的圖片顯示在白色底圖上 -->
                        <View
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:id="@+id/fake_button_refresh"
                            android:layout_alignParentRight="true" />
                        <!-- 驗證碼圖片 -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@id/fake_button_refresh"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/image_captcha"
                            android:scaleType="fitXY"/>
                    </RelativeLayout>
                </FrameLayout>

                <!-- 驗證碼輸入框與錯誤訊息 -->
                <!-- 輸入框 -->
                <EditText
                    android:id="@+id/edit_captcha"
                    style="@style/CommonEditText"
                    android:drawableRight="@null"
                    android:maxLength="@integer/captcha_length"
                    android:inputType="number"
                    android:hint="@string/hint_input_captcha"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@id/layout_captcha"
                    android:layout_marginRight="8dp"/>
                <!-- 錯誤訊息 -->
                <TextView
                    android:id="@+id/text_captcha_error"
                    style="@style/FieldError"
                    android:layout_alignTop="@id/edit_captcha"
                    android:visibility="invisible"
                    android:text="@string/red_envelope_captcha_error"/>
            </RelativeLayout>

            <!-- 最下方的按鈕 -->
            <Button
                style="@style/RedEnvelopeButtonWithBackground"
                android:id="@+id/button_next"
                android:text="@string/title_sent_red_envelope"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
