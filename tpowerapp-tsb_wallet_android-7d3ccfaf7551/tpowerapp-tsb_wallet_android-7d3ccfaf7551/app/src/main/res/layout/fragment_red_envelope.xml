<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.red.RedEnvelopeFragment">

    <!-- 背景 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="165dp"/>
        <!-- 灰白色底圖 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bd_home_white_down"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <!-- 頁面內容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <!-- 大頭圖像 -->
        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="@dimen/photo_size"
            android:layout_height="@dimen/photo_size"
            android:background="@drawable/img_default_avatar"
            android:layout_marginTop="@dimen/headline_vertical_margin"/>

        <!-- 鎖頭 or 錢包餘額 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/home_account_balance"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="$0"
                    android:visibility="gone"
                    android:id="@+id/text_balance"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_balance_lock"
                    android:id="@+id/button_locker"
                    android:background="?android:selectableItemBackground"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <!-- 箭頭 -->
            <ImageButton
                android:id="@+id/button_sv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_balance_arrow"
                android:background="?selectableItemBackground"
                android:layout_marginLeft="7dp"/>
        </LinearLayout>

        <!-- 發紅包按鈕 -->
        <Button
            android:id="@+id/button_send"
            android:text="@string/send_red_envelope"
            android:layout_marginTop="@dimen/headline_vertical_margin"
            android:layout_marginBottom="@dimen/headline_vertical_margin"
            style="@style/RedEnvelopeButtonWithBackground"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"/>

        <!-- 收到的紅包列表或表示空列表的圖案 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 如果列表為空，顯示此圖 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/img_home_empty_mailbox"
                android:visibility="gone"
                android:id="@+id/empty_view"/>
            <!-- 下拉更新列表 -->
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- 紅包列表 -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v4.widget.SwipeRefreshLayout>
        </FrameLayout>

    </LinearLayout>
</FrameLayout>
