<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <!-- 分隔線與文字-轉入 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/headline_vertical_margin">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_e_five_font_divider"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/transfer_to"
                android:textColor="@color/sv_divider_text"
                android:textSize="@dimen/text_size_normal"/>
        </FrameLayout>

        <!-- 轉入資訊：頭像、名字與轉帳金額 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal" >
            <!-- 頭像 -->
            <ImageView
                android:layout_width="@dimen/list_photo_size"
                android:layout_height="@dimen/list_photo_size"
                android:id="@+id/image_photo"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/img_default_photo_gold_dark" />
            <!-- 名字...(n) -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_photo"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">
                <!-- (n) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:id="@+id/text_names_number"
                    android:textSize="@dimen/name_text_size"
                    android:textColor="@color/sv_auth_text"
                    android:singleLine="true"
                    android:text=""
                    android:layout_alignParentRight="true" />
                <!-- 名字... -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/text_names_to"
                    android:textSize="@dimen/name_text_size"
                    android:textColor="@color/sv_auth_text"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="Kevin Yeh, Anna Wu, Rich Chang, Amo Chen, John Lee, Miko Lai"
                    android:layout_toLeftOf="@id/text_names_number"/>
            </RelativeLayout>

            <!-- 轉帳金額 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/sv_auth_text"
                    android:singleLine="true"
                    android:layout_marginRight="6dp"
                    android:text="@string/transfer_total"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/text_amount"
                    android:textSize="28sp"
                    android:textColor="@color/sv_auth_text"
                    android:singleLine="true"
                    android:text="800" />
            </LinearLayout>
        </LinearLayout>

        <!-- 付款訊息 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:id="@+id/text_message"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/sv_auth_text"
            android:text="thank you"
            android:layout_marginTop="14dp"/>

        <!-- 分隔線與文字-轉出 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/headline_vertical_margin"
            android:layout_marginTop="@dimen/headline_vertical_margin" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_e_five_font_divider"
                android:layout_gravity="center"
                android:scaleType="fitXY" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/transfer_from"
                android:textColor="@color/sv_divider_text"
                android:textSize="@dimen/text_size_normal"/>
        </FrameLayout>


        <!-- 轉出資訊：名字、帳號 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal" >

            <!-- 轉出者的名字 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/text_name_from"
                android:textSize="@dimen/name_text_size"
                android:textColor="@color/sv_auth_text"
                android:singleLine="true"
                android:text="陳大維"/>

            <!-- 轉出帳號 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/text_account"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/sv_auth_text"
                android:singleLine="true"
                android:text="轉出帳號：0000-000-000-0000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="14dp"/>
        </LinearLayout>

        <!-- 儲值帳戶密碼與驗證碼顯示/輸入區 -->
        <fragment
            android:name="tw.com.taishinbank.ewallet.controller.sv.PasswordCaptchaInputFragment"
            android:id="@+id/fragment_password_captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 最下方的按鈕 -->
        <Button
            style="@style/SVButtonWithBackground"
            android:id="@+id/button_next"
            android:text="@string/sv_trx_detail_req_out_action2"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>
