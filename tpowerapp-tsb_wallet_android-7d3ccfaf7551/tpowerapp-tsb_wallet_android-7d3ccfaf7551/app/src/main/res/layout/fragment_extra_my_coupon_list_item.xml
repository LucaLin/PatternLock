<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp">

    <!-- 多一層layout指定高度 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="vertical"
        android:background="@drawable/btn_custom_white_shape">
        <!-- 小紅點，收到時間 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <ImageView
                android:id="@+id/img_new"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:visibility="gone"
                android:src="@drawable/img_e_history_new_cricle"/>

            <!-- 時間 -->
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/red_envelope_list_time_text"
                android:textSize="@dimen/red_envelope_list_time_textsize"
                android:text="4小時前"
                android:gravity="left"/>

        </RelativeLayout>

        <!-- Banner -->
        <ImageView
            android:id="@+id/img_coupon_banner"
            android:layout_width="@dimen/coupon_banner_size"
            android:layout_height="@dimen/coupon_banner_size"
            android:src="@drawable/img_banner_default"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp" />

        <!-- 品名 / 優惠卷狀態類型 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <!-- 名稱 -->
            <TextView
                android:id="@+id/txt_coupon_prod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/txt_type"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:textColor="@color/red_envelope_list_time_text"
                android:textSize="13sp"
                android:text="全家咖啡"/>

            <!-- 項目 -->
            <TextView
                android:id="@+id/txt_coupon_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_coupon_prod"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp"
                android:layout_toLeftOf="@id/txt_type"
                android:ellipsize="end"
                android:textColor="@color/red_envelope_list_time_text"
                android:textSize="13sp"
                android:text="4小時前"/>

            <!-- Status -->
            <TextView
                android:id="@+id/txt_type"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/txt_coupon_content"
                android:layout_marginLeft="6dp"
                android:background="@drawable/sv_transaction_status_done"
                android:text="TYPE"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center"/>

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>