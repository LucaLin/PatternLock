<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_main">

    <TextView
        android:id="@+id/txt_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="18dp"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/sv_result_title_success"
        android:text="@string/sv_result_title_success_receipt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/img_main_top_up_card"
        android:padding="25dp">

        <!-- 成功或失敗的圖示 -->
        <ImageView
            android:id="@+id/img_sv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_top_up_succeed"
            android:layout_gravity="center_horizontal"/>

        <!-- $1,200 -->
        <LinearLayout
            android:id="@+id/lyt_money_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/txt_amount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorGrayPrimaryDark"
                android:text="@string/sv_deposit"/>
            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="40sp"
                android:textColor="@color/colorGrayPrimaryDark"
                android:text="$1,200"/>
        </LinearLayout>

        <!-- 分隔線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_divider_height"
            android:background="@drawable/sv_account_detail_divider"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <!-- 原始與儲值後金額 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lyt_result_amount">

                <!-- 原始金額 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sv_original_amount"
                        android:id="@+id/txt_line1_title"
                        android:gravity="center"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$34"
                        android:id="@+id/txt_line1_amount"
                        android:layout_gravity="right"
                        android:gravity="center_vertical|right"
                        android:textSize="@dimen/text_size_large"/>
                </LinearLayout>

                <!-- 儲值後金額 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="儲值後金額"
                        android:id="@+id/txt_line2_title"
                        android:gravity="center"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$1,234"
                        android:id="@+id/txt_line2_amount"
                        android:gravity="center_vertical|right"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- 錯誤訊息 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/sv_result_title_failure"
                android:textSize="@dimen/text_size_normal"
                android:id="@+id/txt_error_message"
                android:gravity="center" />

        </FrameLayout>
    </LinearLayout>

    <!-- Spacing layout for the bottom button area -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <!-- 下方按鈕區 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_action_1"
            android:text="@string/sv_home"
            style="@style/CommonButtonWithBackground"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_marginLeft="8dp"
            android:id="@+id/btn_action_2"
            android:text="@string/sv_account_history"
            style="@style/CommonButtonWithBackground"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
