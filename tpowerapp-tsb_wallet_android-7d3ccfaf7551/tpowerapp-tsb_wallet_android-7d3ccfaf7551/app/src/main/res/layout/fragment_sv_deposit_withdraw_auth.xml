<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <!-- 分隔線與文字-金額轉出從 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/img_e_five_font_divider" />
                <TextView
                    android:id="@+id/text_divider_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/transfer_from"
                    android:textColor="@color/sv_divider_text"
                    android:textSize="@dimen/text_size_normal" />
            </FrameLayout>

            <!-- 轉出帳號資訊 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:layout_marginTop="16dp"
                android:gravity="top|center_horizontal"
                android:orientation="horizontal">

                <!-- 轉出帳戶： -->
                <TextView
                    android:id="@+id/text_bank_account_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/sv_account_transfer_from_with_colon"
                    android:textColor="@color/sv_auth_text"
                    android:textSize="@dimen/text_size_medium" />

                <!-- 銀行帳號與代碼名稱 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- 銀行帳號 -->
                    <TextView
                        android:id="@+id/text_bank_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0000-000-000-0000"
                        android:textColor="@color/sv_auth_text"
                        android:textSize="@dimen/text_size_medium" />
                    <!-- 銀行代碼名稱 -->
                    <TextView
                        android:id="@+id/text_bank_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="(812 台新銀行)"
                        android:textColor="@color/sv_auth_text"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- 分隔線與文字-金額儲值給 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/img_e_five_font_divider" />
                <TextView
                    android:id="@+id/text_divider_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/sv_amount_deposit_to"
                    android:textColor="@color/sv_divider_text"
                    android:textSize="@dimen/text_size_normal" />
            </FrameLayout>

            <!-- 儲值帳號資訊 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- 儲值帳號：0000-000-000-0000 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="28sp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <!-- 儲值帳號： -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/sv_deposit_account_with_colon"
                        android:textColor="@color/sv_auth_text"
                        android:textSize="@dimen/text_size_medium" />
                    <!-- 0000-000-000-0000 -->
                    <TextView
                        android:id="@+id/text_sv_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0000-000-000-0000"
                        android:textColor="@color/sv_auth_text"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

                <!-- 儲值總額：NT$ 10,000 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="28sp"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal">
                    <!-- 儲值總額：NT$ -->
                    <TextView
                        android:id="@+id/text_total_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:layout_marginRight="6dp"
                        android:text="@string/sv_deposit_total_amount_with_dollar_sign"
                        android:textColor="@color/sv_auth_text"
                        android:textSize="@dimen/text_size_medium" />
                    <!-- 字體較大的金額數字 10,000 -->
                    <TextView
                        android:id="@+id/text_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="10,000"
                        android:textColor="@color/sv_auth_text"
                        android:textSize="28sp"
                        android:includeFontPadding="false"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 儲值帳戶密碼與驗證碼顯示/輸入區 -->
            <fragment
                android:name="tw.com.taishinbank.ewallet.controller.sv.PasswordCaptchaInputFragment"
                android:id="@+id/fragment_password_captcha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp" />

        </LinearLayout>
    </ScrollView>

    <!-- 最下方的按鈕 -->
    <Button
        style="@style/SVButtonWithBackground"
        android:id="@+id/button_next"
        android:text="@string/button_next_step" />
</LinearLayout>
