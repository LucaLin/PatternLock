<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    android:background="@drawable/bd_home_white_down"
    tools:context=".controller.creditcard.CreditCardManageActivity">
    <!-- 上方標題與選單 -->
    <include layout="@layout/appbar"
        android:id="@+id/appbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/top_margin"
        android:layout_marginRight="@dimen/top_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <TextView
            android:id="@+id/text_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/result_title_delete"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/bgreen_text"
            />
        <!-- android:background="@drawable/bg_black_half_transparent_round"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/top_margin"
            android:gravity="center"
            android:background="@drawable/bg_credit_crad_result_message">
            <TextView
                android:id="@+id/text_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result_message_title_delete"
                android:textColor="@color/colorGrayPrimaryDark"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginTop="@dimen/top_margin"/>
            <TextView
                android:id="@+id/text_card_bank"
                android:layout_width="95dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="@string/title_activity_welcome"
                android:textColor="@color/white_text_c"
                android:textSize="@dimen/text_size_small"
                android:background="@drawable/bg_black_half_transparent_round"
                android:layout_marginTop="25dp"/>
            <TextView
                android:id="@+id/text_card_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="台新玫瑰卡(⋯⋯5678)"
                android:textColor="@color/colorGrayPrimaryDark"
                android:textSize="@dimen/text_size_larger"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/image_result_status"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:src="@drawable/ic_credit_card_del_susseed"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 最下方的按鈕 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom">

        <!-- 左 -->
        <Button
            style="@style/CommonButtonWithBackground"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/button_left"
            android:layout_marginRight="10dp"
            android:text="@string/create_credit_card"/>
        <!-- 右/一個 -->
        <Button
            style="@style/CommonButtonWithBackground"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/button_right_or_fill"
            android:text="@string/button_goback_credit_card_main"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>