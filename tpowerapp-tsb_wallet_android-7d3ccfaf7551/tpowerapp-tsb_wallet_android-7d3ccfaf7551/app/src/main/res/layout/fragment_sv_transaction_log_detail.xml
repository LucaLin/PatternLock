<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 背景 -->
    <!-- 灰白色底圖 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_main"
        android:scaleType="centerCrop"/>

    <!-- 頁面內容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/bg_e_history_title">
            <TextView
                android:id="@+id/txt_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/sv_trx_detail_sub_title_request"
                android:textColor="#404040"
                android:textSize="17sp"/>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_history_e_top"
            android:layout_marginTop="-2dp"
            android:paddingLeft="6dp"
            android:paddingRight="28dp">

            <!-- 頭像 -->
            <ImageView
                android:id="@+id/image_photo"
                android:layout_width="@dimen/list_photo_size"
                android:layout_height="@dimen/list_photo_size"
                android:background="@drawable/img_default_photo_purple"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"/>

            <!-- 尚未付款 -->
            <TextView
                android:id="@+id/text_not_pay"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/sv_transaction_status_not_done"
                android:text="@string/sv_trx_detail_not_pay"
                android:textColor="@android:color/white"
                android:gravity="center"/>

            <!-- 上方送給誰或誰送的名字 -->
            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/image_photo"
                android:layout_toLeftOf="@id/text_not_pay"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/red_envelope_list_name_text"
                android:textSize="@dimen/red_envelope_list_name_textsize"
                android:text="Anita Wu送來紅包"
                android:maxLines="2"
                android:gravity="start"
                android:ellipsize="end"/>

            <!-- 右上方的金額 -->
            <TextView
                android:id="@+id/text_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7dp"
                android:minWidth="56dp"
                android:text="$800"
                android:textColor="@color/red_envelope_list_amount_text"
                android:textSize="@dimen/red_envelope_list_amount_textsize"
                android:gravity="right|center_vertical"/>

            <!-- 第二排的時間 -->
            <TextView
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name"
                android:layout_alignLeft="@id/text_name"
                android:layout_toLeftOf="@id/text_amount"
                android:layout_alignBottom="@id/text_amount"
                android:gravity="bottom"
                android:textColor="@color/red_envelope_list_time_text"
                android:textSize="@dimen/red_envelope_list_time_textsize"
                android:text="4小時前"/>

            <!-- 分隔線 -->
            <View
                android:id="@+id/divider"
                android:layout_below="@id/text_amount"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="5dp"
                android:background="@color/red_envelope_divider"/>

            <!-- Receipt 內容文字 -->
            <TextView
                android:id="@+id/text_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_alignLeft="@id/divider"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:textColor="@color/red_envelope_list_time_text"
                android:textSize="13sp"
                android:gravity="start"
                android:text="內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容"
                />

            <!--  內容文字 -->
            <TableLayout
                android:id="@+id/lyt_trx_detail"
                android:layout_below="@id/text_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/divider"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:gravity="start"
                android:visibility="gone">
                <TableRow>
                    <TextView
                        android:id="@+id/lbl_pre_amount"
                        android:text="@string/sv_trx_out_detail_pre_amount"
                        android:layout_height="20sp"
                        />
                    <TextView
                        android:id="@+id/txt_pre_amount"
                        android:text="NT$800"
                        android:textColor="#666666"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/lbl_charge"
                        android:text="@string/sv_trx_detail_charge"
                        android:layout_height="20sp"
                        />
                    <TextView
                        android:id="@+id/txt_charge"
                        android:text="NT$0"
                        android:textColor="#666666"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/lbl_amount"
                        android:text="@string/sv_trx_out_detail_amount"
                        android:layout_height="20sp"
                        />
                    <TextView
                        android:id="@+id/txt_amount"
                        android:text="NT$800"
                        android:textColor="#666666"/>
                </TableRow>
            </TableLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lyt_payer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <include layout="@layout/fragment_sv_transaction_log_list_item_seperator" />
            </FrameLayout>


            <!-- 收到的人列表 -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_action_1"
                    android:text="Action 1"
                    style="@style/SVButtonWithBackgroundSmall"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_marginLeft="8dp"
                    android:id="@+id/btn_action_2"
                    android:text="Action 2"
                    style="@style/SVButtonWithBackgroundSmall"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
