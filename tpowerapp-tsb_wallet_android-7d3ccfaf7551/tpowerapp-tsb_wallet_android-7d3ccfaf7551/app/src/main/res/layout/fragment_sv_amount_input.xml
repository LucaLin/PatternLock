<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 主要畫面內容 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <!-- 頭像與名字(或文字) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <!-- D-T-43 的頭像、名字(n) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/layout_account_info">
                    <!-- 頭像 -->
                    <ImageView
                        android:layout_width="@dimen/list_photo_size"
                        android:layout_height="@dimen/list_photo_size"
                        android:id="@+id/image_photo"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/img_default_photo_gold_dark" />
                    <!-- 名字...(n) -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_photo"
                        android:gravity="center"
                        android:layout_marginTop="4dp">
                        <!-- (n) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"
                            android:id="@+id/text_names_number"
                            android:textSize="@dimen/name_text_size"
                            android:textColor="@color/colorGrayPrimaryDark"
                            android:singleLine="true"
                            android:text="(5000)"
                            android:layout_alignParentRight="true" />
                        <!-- 名字... -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/text_names"
                            android:textSize="@dimen/name_text_size"
                            android:textColor="@color/colorGrayPrimaryDark"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="Kevin Yeh, Anna Wu, Rich Chang, Amo Chen, John Lee, Miko Lai"
                            android:layout_toLeftOf="@id/text_names_number"/>
                    </RelativeLayout>

                </LinearLayout>

                <!-- D-T-07 上方的儲值轉出帳戶資訊 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_bank_account_info"
                    android:visibility="invisible"
                    android:gravity="center_horizontal">
                    
                    <TextView
                        android:id="@+id/text_bank_account_title"
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:minHeight="24dp"
                        android:background="@drawable/bg_text_account_transfer_from"
                        android:text="@string/sv_account_transfer_from"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/text_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0000-000-000-0000"
                        android:textColor="@color/colorGrayPrimaryDark"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/text_bank_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(812 台新銀行)"
                        android:textColor="@color/colorGrayPrimaryDark"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"/>

                </LinearLayout>

            </FrameLayout>

            <!-- 輸入框、提示訊息與數字鍵 -->
            <include layout="@layout/sv_inputfield_and_number_pad" />

            <!-- 最下方的按鈕 -->
            <Button
                style="@style/SVButtonWithBackground"
                android:id="@+id/button_next"
                android:text="@string/register_next"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
