<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 頁面內容 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/bg_e_history_title">
                <TextView
                    android:id="@+id/txt_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/extra_my_coupon_used"
                    android:textColor="#404040"
                    android:textSize="17sp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_history_e_top"
                android:layout_marginTop="-2dp"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="20dp">

                <!-- 時間 -->
                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textSize="10sp"
                    android:text="2016/11/19 16:49"
                    android:textColor="#404040"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"/>

                <!-- Banner -->
                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_banner_default"
                    android:layout_marginTop="5dp"/>

                <!-- Main title -->
                <!-- 品名 / 優惠卷狀態類型 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <!-- 金額 -->
                    <TextView
                        android:id="@+id/txt_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_name"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="7dp"
                        android:minWidth="56dp"
                        android:text="$800"
                        android:textColor="@color/red_envelope_list_amount_text"
                        android:textSize="@dimen/red_envelope_list_amount_textsize"
                        android:gravity="right|center_vertical"/>

                    <!-- 名稱 -->
                    <TextView
                        android:id="@+id/txt_prod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/red_envelope_list_time_text"
                        android:textSize="15sp"
                        android:layout_toLeftOf="@id/txt_amount"
                        android:layout_alignParentLeft="true"
                        android:text="全家咖啡全家咖全家咖啡全家咖全家咖啡全家咖全家咖啡全家咖全家咖啡全家咖"/>

                    <!-- 項目 -->
                    <TextView
                        android:id="@+id/txt_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_prod"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/red_envelope_list_time_text"
                        android:textSize="15sp"
                        android:layout_toLeftOf="@id/txt_amount"
                        android:layout_alignParentLeft="true"
                        android:text="OOOO住宿券"/>

                </RelativeLayout>


                <!-- 分隔線 -->
                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/red_envelope_divider"/>

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <!-- 票券編號 -->
                    <TableRow>
                        <TextView
                            android:text="@string/extra_my_ticket_label_ticket_number"
                            android:layout_height="20sp" />
                        <TextView
                            android:id="@+id/txt_ticket_id"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="#666666" />
                    </TableRow>
                    <!-- 信託時間 -->
                    <TableRow>
                        <TextView
                            android:text="@string/extra_my_ticket_label_duration"
                            android:layout_height="20sp" />
                        <TextView
                            android:id="@+id/txt_valid_duration"
                            android:layout_weight="1"
                            android:text="2016/01/23-2017/01/23"
                            android:textColor="#666666" />
                    </TableRow>
                    <!-- 購入 -->
                    <TableRow>
                        <TextView
                            android:text="@string/extra_my_ticket_label_payment_date"
                            android:layout_height="20sp" />
                        <TextView
                            android:id="@+id/txt_create_date"
                            android:text="2016/01/23-2017/01/23"
                            android:textColor="#666666" />
                    </TableRow>
                    <!-- 兌換時間/退貨時間 -->
                   <TableRow android:id="@+id/lyt_exchange_date"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/txt_exchange_date_title"
                            android:text="@string/extra_my_coupon_label_exchange_date"
                            android:layout_height="20sp" />
                        <TextView
                            android:id="@+id/txt_exchange_date"
                            android:text="2016/01/23-2017/01/23"
                            android:textColor="#666666" />
                    </TableRow>
                </TableLayout>

                <!--  內容文字 -->
                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <TableRow>
                        <TextView
                            android:text="@string/extra_my_ticket_label_use_directions"
                            android:layout_height="20sp"
                            />
                        <TextView
                            android:id="@+id/txt_use_directions"
                            android:text="凡優惠期間於指定全家便利商店，購買任一品項咖啡買一送一，任選指定商品。凡優惠期間於指定全家便利商店，購買任一品項咖啡買一送一，任選指定商品。"
                            android:lines="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="1"
                            android:textColor="#666666"/>
                        <ImageButton
                            android:id="@+id/btn_use_directions"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="?selectableItemBackground"
                            android:src="@drawable/btn_g_history_inside_text_more_arrow"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="@string/extra_my_coupon_label_store_info"
                            android:layout_height="20sp"
                            />
                        <TextView
                            android:id="@+id/txt_store_inf"
                            android:layout_weight="1"
                            android:lines="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="台北市內湖區成功路二段４２４號\n02-27948069。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。"
                            android:textColor="#666666"/>
                        <ImageButton
                            android:id="@+id/btn_store_inf"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="?selectableItemBackground"
                            android:src="@drawable/btn_g_history_inside_text_more_arrow"/>
                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <!-- 下半部 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:layout_marginBottom="16sp">
                <LinearLayout
                    android:id="@+id/lyt_action_unuse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <Button
                        android:id="@+id/btn_trade"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="@string/extra_my_coupon_button_trade"
                        style="@style/CommonButtonWithBackground"
                        android:layout_width="match_parent"
                        />

                    <TextView
                        android:id="@+id/txt_caution_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/bottom_text"
                        android:text="@string/sv_caution_title"/>

                    <TextView
                        android:id="@+id/txt_caution_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="13dp"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/bottom_text"
                        android:text="@string/extra_my_ticket_caution"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_action_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <Button
                        android:id="@+id/btn_tolog"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="@string/extra_my_ticket_to_credit_transaction_log"
                        style="@style/CommonButtonWithBackground"
                        android:layout_width="match_parent"
                        />
              </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>