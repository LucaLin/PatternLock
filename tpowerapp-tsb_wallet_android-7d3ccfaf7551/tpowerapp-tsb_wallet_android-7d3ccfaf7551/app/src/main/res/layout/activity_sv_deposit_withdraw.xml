<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 上方客製的toolbar -->
    <include layout="@layout/appbar"/>

    <!-- 頁面內容 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 最下方的按鈕 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/layout_buttons"
            android:paddingRight="13dp"
            android:paddingBottom="13dp"
            android:paddingLeft="13dp">
            <!-- 儲值 -->
            <Button
                style="@style/SVButtonWithBackgroundSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/button_deposit"
                android:text="@string/sv_deposit"/>
            <!-- 提領 -->
            <Button
                style="@style/SVButtonWithBackgroundSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:id="@+id/button_withdraw"
                android:text="@string/sv_withdraw"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/layout_buttons"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 頭像、金額等 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F4F4F4"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">
                    <!-- 大頭圖像 -->
                    <ImageView
                        android:id="@+id/image_photo"
                        android:layout_width="@dimen/photo_size"
                        android:layout_height="@dimen/photo_size"
                        android:background="@drawable/img_default_avatar"
                        android:layout_marginTop="@dimen/headline_vertical_margin" />
                    <!-- 儲值帳戶餘額文字 -->
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/colorGrayPrimaryDark"
                        android:text="@string/sv_account_balance"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/headline_subtitle_margin_top"/>
                    <!-- 儲值帳戶餘額金額文字 -->
                    <TextView
                        android:id="@+id/text_balance"
                        android:textColor="@color/colorRedPrimary"
                        android:textSize="28sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="$0,000"
                        android:gravity="center"
                        android:layout_marginBottom="21dp"/>
                </LinearLayout>

                <!-- 帳戶資訊 -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:stretchColumns="1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="@dimen/activity_vertical_margin">
                    <TableRow>
                        <TextView
                            style="@style/SVTableRowTitleText"
                            android:text="@string/sv_detail_account_type"/>
                        <TextView
                            style="@style/SVTableRowValueText"
                            android:id="@+id/text_account_type"
                            android:text="第二類"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            style="@style/SVTableRowTitleText"
                            android:text="@string/sv_account_detail_max_deposit"/>
                        <TextView
                            style="@style/SVTableRowValueText"
                            android:id="@+id/text_max_deposit_amount"
                            android:text="$100,000"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            style="@style/SVTableRowTitleText"
                            android:text="@string/sv_detail_account"/>
                        <TextView
                            style="@style/SVTableRowValueText"
                            android:id="@+id/text_account"
                            android:text="0000-000-000-0000"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            style="@style/SVTableRowTitleText"
                            android:text="@string/bank_code"/>
                        <TextView
                            style="@style/SVTableRowValueText"
                            android:id="@+id/text_bank_code"
                            android:text="812"/>
                    </TableRow>
                </TableLayout>

                <!-- 按鈕上方說明文字 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_cautions"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin">
                    <!-- 大字標題 -->
                    <TextView
                        android:id="@android:id/title"
                        android:layout_alignParentTop="true"
                        style="@style/HeadlineTitle"
                        android:textStyle="normal"
                        android:textColor="@color/bottom_text"
                        android:text="@string/sv_caution_title"/>
                    <!-- 第二行文字 -->
                    <TextView
                        android:id="@android:id/text1"
                        android:layout_below="@android:id/title"
                        style="@style/HeadlineSubtitle"
                        android:textColor="@color/bottom_text"
                        android:layout_marginTop="@dimen/headline_subtitle_margin_top"
                        android:text="@string/deposit_caution"
                        android:gravity="center_vertical|left"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>