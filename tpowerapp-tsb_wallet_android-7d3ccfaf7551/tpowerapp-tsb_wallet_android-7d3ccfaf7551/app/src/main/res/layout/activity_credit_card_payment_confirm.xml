<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    android:background="@drawable/bd_home_white_down"
    tools:context=".controller.creditcard.CreditPaymentConfirmActivity"
    android:orientation="vertical">
    <!-- 上方標題與選單 -->
    <include layout="@layout/appbar"
        android:id="@+id/appbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin">
            <LinearLayout
                android:id="@+id/layout_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 分隔線與文字-轉入 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/headline_vertical_margin">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_e_five_font_divider"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/credit_card_payment_detail"
                        android:textColor="@color/sv_divider_text"
                        android:textSize="@dimen/text_size_normal"/>
                </FrameLayout>

                <!-- 大頭圖像 -->
                <!--<ImageView-->
                    <!--android:id="@+id/img_photo"-->
                    <!--android:layout_width="52dp"-->
                    <!--android:layout_height="52dp"-->
                    <!--android:background="@drawable/img_default_avatar"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:layout_marginTop="@dimen/headline_vertical_margin"-->
                    <!--android:layout_marginBottom="4dp"/>-->

                <!-- Banner -->
                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_banner_default"
                    android:layout_marginTop="5dp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <TextView
                            style="@style/CreditTableRowTitleText"
                            android:text="@string/store_name" />
                        <TextView
                            android:id="@+id/text_storename"
                            style="@style/CreditTableRowContentText"
                            android:text="OOOO"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            style="@style/CreditTableRowTitleText"
                            android:text="@string/commodity_name" />
                        <TextView
                            android:id="@+id/text_commodity_name"
                            style="@style/CreditTableRowContentText"
                            android:text="OOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOO"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            style="@style/CreditTableRowTitleText"
                            android:text="@string/commodity_number" />
                        <TextView
                            android:id="@+id/text_commodity_number"
                            style="@style/CreditTableRowContentText"
                            android:text="OOOO"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            style="@style/CreditTableRowTitleText"
                            android:text="@string/commodity_money" />
                        <TextView
                            style="@style/CreditTableRowContentText"
                            android:id="@+id/text_commodity_money"
                            android:text="OOOO"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            style="@style/CreditTableRowTitleText"
                            android:text="@string/order_id" />
                        <TextView
                            android:id="@+id/text_order_id"
                            style="@style/CreditTableRowContentText"
                            android:text="OOOO"/>
                    </TableRow>
                </TableLayout>


                <!-- 分隔線與文字-轉入 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginBottom="@dimen/top_margin">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_e_five_font_divider"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/credit_card_detail"
                        android:textColor="@color/sv_divider_text"
                        android:textSize="@dimen/text_size_normal"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/title_credit_card_selected"
                        android:textColor="@color/red_envelope_list_name_text"
                        android:textSize="@dimen/text_size_medium" />
                    <TextView
                        android:id="@+id/text_cardname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/red_envelope_list_name_text"
                        android:textSize="@dimen/text_size_medium"
                        android:text="台新玫瑰卡"/>
                    <ImageButton
                        android:id="@+id/btn_change_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_change_credit_card"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_viewpager_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/text_selected_title"
                    android:layout_width="134dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="@string/title_credit_card_selected"
                    android:textColor="@color/white_text_c"
                    android:textSize="@dimen/text_size_small"
                    android:background="@drawable/bg_black_half_transparent_round"/>
                <TextView
                    android:id="@+id/text_selected_cardname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/colorGrayPrimaryDark"
                    android:textSize="@dimen/text_size_medium"
                    android:text="台新玫瑰卡"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_card_hight"
                    android:layout_marginTop="14dp"
                    android:clipChildren="false">
                    <Button
                        android:id="@+id/button_viewpager_left"
                        android:layout_width="24dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="14dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_credit_card_change_arrow_left"/>
                    <Button
                        android:id="@+id/button_viewpager_right"
                        android:layout_width="24dp"
                        android:layout_height="36dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="14dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_credit_card_change_arrow_right"/>

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager_card"
                        android:layout_width="@dimen/image_card_width"
                        android:layout_height="@dimen/image_card_hight"
                        android:clipChildren="false"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
            </LinearLayout>



        </RelativeLayout>
    </ScrollView>

    <!-- 最下方的按鈕 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom">

        <!-- 新增卡片 -->
        <Button
            style="@style/CommonButtonWithBackground"
            android:id="@+id/button_selected"
            android:text="@string/button_next_step"/>

    </LinearLayout>

</LinearLayout>