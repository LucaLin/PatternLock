<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical" >
    <!-- 上方的標題 -->
    <include layout="@layout/headline"
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/headline_vertical_margin"
        android:layout_marginBottom="@dimen/headline_vertical_margin"
        />

    <!-- 分隔線 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/content_divider_height"
        android:background="#404040" />

    <!-- Have Account List -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lst_accounts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.0">
    </android.support.v7.widget.RecyclerView>

    <!-- setShow white it is the case of No 'Designate' Account  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.0"
        android:id="@+id/lyt_no_account_and_caution">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lyt_no_account"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="@dimen/account_list_item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:text="@string/new_designate_bank_account"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="#404040"/>

                <ImageButton
                    android:id="@+id/btn_add_designate_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/btn_checkbox_add">
                </ImageButton>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/content_divider_height"
                android:background="#959595" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_caution_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="13dp"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/bottom_text"
            android:text="@string/new_designate_bank_account_caution_content"/>

        <TextView
            android:id="@+id/txt_caution_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txt_caution_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/bottom_text"
            android:text="@string/sv_caution_title"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_next"
        android:text="@string/button_next_step"
        android:layout_marginTop="5dp"
        style="@style/CommonButtonWithBackground" />

</LinearLayout>