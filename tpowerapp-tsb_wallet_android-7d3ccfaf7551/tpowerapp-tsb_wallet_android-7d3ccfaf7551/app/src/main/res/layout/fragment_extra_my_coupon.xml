<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:background="@drawable/bg_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/tab_history_bg"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        android:id="@+id/radio_group"
        android:paddingBottom="2dp">
        <FrameLayout
            android:id="@+id/btn_unused"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/txt_unused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:text="@string/extra_my_coupon_unused"
                    android:textColor="@color/radio_tab_text" />
                <ImageView
                    android:id="@+id/img_unused_new"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="-6dp"
                    android:layout_toRightOf="@+id/txt_unused"
                    android:layout_alignTop="@+id/txt_unused"
                    android:visibility="gone"
                    android:src="@drawable/img_e_history_new_cricle"/>
            </RelativeLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_used"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/txt_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:text="@string/extra_my_coupon_used"
                    android:textColor="@color/radio_tab_text"/>
                <ImageView
                    android:id="@+id/img_used_new"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="-6dp"
                    android:layout_toRightOf="@+id/txt_used"
                    android:layout_alignTop="@+id/txt_used"
                    android:visibility="gone"
                    android:src="@drawable/img_e_history_new_cricle"/>
            </RelativeLayout>

        </FrameLayout>


    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|top"
            android:text="@string/extra_my_coupon_list_is_empty"
            android:visibility="gone"/>
        <ListView
            android:id="@+id/lst_my_coupon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"/>
    </FrameLayout>
</LinearLayout>
