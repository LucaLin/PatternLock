<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.red.MyRedEnvelopeDetailFragment">

    <!-- 背景 -->
    <!-- 灰白色底圖 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_system_messages_inside"
        android:scaleType="centerCrop"
        android:layout_marginBottom="-10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 頁面內容 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="28dp">

                <!-- 頭像 -->
                <ImageView
                    android:layout_width="@dimen/list_photo_size"
                    android:layout_height="@dimen/list_photo_size"
                    android:background="@drawable/img_taishin_photo"
                    android:id="@+id/image_photo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="17dp"/>

                <!-- 上方Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_envelope_list_name_text"
                    android:textSize="@dimen/red_envelope_list_name_textsize"
                    android:text="@string/app_name"
                    android:id="@+id/text_name"
                    android:layout_marginTop="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/image_photo"
                    android:layout_marginLeft="5dp"
                    android:gravity="start" />


                <!-- 第二排的時間 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_envelope_list_time_text"
                    android:textSize="@dimen/red_envelope_list_time_textsize"
                    android:text="4小時前"
                    android:id="@+id/text_time"
                    android:layout_below="@id/text_name"
                    android:layout_alignLeft="@id/text_name"
                    android:layout_marginTop="10dp"/>


                <!-- 分隔線 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="64dp"
                    android:background="@color/red_envelope_divider"
                    android:layout_below="@id/text_time"
                    android:layout_marginTop="10dp"
                    android:id="@+id/divider"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignLeft="@id/divider"
                    android:layout_below="@id/divider"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp">

                    <!-- 內容文字 -->
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_message"
                        android:textColor="@color/red_envelope_list_time_text"
                        android:textSize="13sp"
                        android:gravity="start"
                        android:text="內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容" />

                </ScrollView>

            </RelativeLayout>



        </LinearLayout>


        <!-- 最下方的按鈕 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/fab_margin"
            android:layout_gravity="bottom">

            <!-- 左 -->
            <Button
                style="@style/CommonButtonWithBackground"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/button_left"
                android:layout_marginRight="10dp"
                android:text="@string/create_credit_card"/>
            <!-- 右/一個 -->
            <Button
                style="@style/CommonButtonWithBackground"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/button_right_or_fill"
                android:text="@string/button_goback_credit_card_main"/>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
