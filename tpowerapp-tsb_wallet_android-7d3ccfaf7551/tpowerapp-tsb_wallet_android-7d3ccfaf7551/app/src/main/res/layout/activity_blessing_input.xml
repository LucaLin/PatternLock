<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".controller.red.BlessingInputActivity"
    android:id="@+id/root_view">

    <!-- 上方客製的toolbar -->
    <include layout="@layout/appbar"/>

    <!-- 頁面內容 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <!-- 頭像 -->
                    <ImageView
                        android:layout_width="@dimen/list_photo_size"
                        android:layout_height="@dimen/list_photo_size"
                        android:background="@drawable/img_default_photo_gold_dark"
                        android:id="@+id/image_photo"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"/>

                    <!-- 名字...(n) -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_photo"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center" >
                        <!-- (n) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|left"
                            android:id="@+id/text_names_number"
                            android:textSize="@dimen/name_text_size"
                            android:textColor="@android:color/white"
                            android:singleLine="true"
                            android:text="(5000)"
                            android:layout_alignParentRight="true" />
                        <!-- 名字... -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/text_names"
                            android:textSize="@dimen/name_text_size"
                            android:textColor="@android:color/white"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="Kevin Yeh, Anna Wu, Rich Chang, Amo Chen, John Lee, Miko Lai"
                            android:layout_toLeftOf="@id/text_names_number"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="28dp"
                        android:paddingLeft="14dp"
                        android:paddingTop="14dp"
                        android:paddingRight="14dp"
                        android:background="@drawable/img_red_reply_dialog" >

                        <!-- 字數 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@android:color/white"
                            android:id="@+id/text_count"
                            android:text="0/50" />

                        <!-- 輸入框 -->
                        <!-- 20160322加入兩行設定，讓虛擬鍵盤的enter可顯示為Done
                            android:imeOptions="actionDone"
                            android:inputType="text" -->
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/message_enter_min_height"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@android:color/white"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@id/text_count"
                            android:background="@android:color/transparent"
                            android:gravity="start"
                            android:id="@+id/edit_blessing"
                            android:hint="@string/hint_write_down_blessing"
                            android:textColorHint="@android:color/white"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLength="@integer/blessing_maxlength"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

            <!-- 下一步按鈕 -->
            <Button
                android:text="@string/register_next"
                style="@style/RedEnvelopeButtonWithBackground"
                android:layout_alignParentBottom="true"
                android:id="@+id/button_next"/>
        </RelativeLayout>

        <!-- 選吉祥話的按鈕與背景 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_red_choose_sentence"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentBottom="true"
            android:id="@+id/layout_button_choose_sentence"
            android:visibility="invisible">
            <Button
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_red_choose_sentence"
                android:id="@+id/button_choose_sentence"/>
        </FrameLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>