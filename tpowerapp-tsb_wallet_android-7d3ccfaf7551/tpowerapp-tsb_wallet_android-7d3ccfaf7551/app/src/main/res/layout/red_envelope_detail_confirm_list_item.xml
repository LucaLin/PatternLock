<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- 背景底圖 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_red_09"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- 頭像 -->
            <ImageView
                android:layout_width="@dimen/list_photo_size"
                android:layout_height="@dimen/list_photo_size"
                android:background="@drawable/img_default_photo_gold_dark"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="21dp"
                android:id="@+id/image_photo"
                />
            <!-- 名字 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@color/colorGoldPrimaryLight"
                android:id="@+id/text_name"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@id/image_photo"
                android:layout_marginLeft="7dp"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingRight="8dp"
                />

            <!-- 金額 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_alignLeft="@id/text_name"
                android:layout_below="@id/text_name">
                <!-- $字號 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:gravity="bottom"
                    android:text="$"/>

                <!-- 金額 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="42sp"
                    android:textColor="@android:color/white"
                    android:gravity="bottom"
                    android:id="@+id/text_amount"/>
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:visibility="gone"
        android:id="@+id/view_footer"/>
</LinearLayout>