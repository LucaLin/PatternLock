<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <!-- 卡片背景 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_home_red_card"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="17dp"
        android:paddingBottom="20dp">

        <!-- 頭像 -->
        <ImageView
            android:layout_width="@dimen/list_photo_size"
            android:layout_height="@dimen/list_photo_size"
            android:background="@drawable/img_default_photo_green"
            android:id="@+id/image_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <!-- 未讀取的圖示 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_new_message_notification"
            android:layout_alignRight="@id/image_photo"
            android:layout_alignTop="@id/image_photo"
            android:layout_marginTop="7dp"
            android:id="@+id/image_new"/>

        <!-- 右上方的金額 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="56dp"
            android:text="$800"
            android:id="@+id/text_amount"
            android:textColor="@color/red_envelope_list_amount_text"
            android:textSize="@dimen/red_envelope_list_amount_textsize"
            android:layout_alignParentRight="true"
            android:layout_marginTop="31dp"
            android:gravity="right|center_vertical"/>

        <!-- 上方誰送的文字 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_envelope_list_name_text"
            android:textSize="@dimen/red_envelope_list_name_textsize"
            android:text="Anita Wu送來紅包"
            android:id="@+id/text_name"
            android:layout_marginTop="25dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/text_amount"
            android:layout_toRightOf="@id/image_photo"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:ellipsize="end"/>

        <!-- 第二排的時間 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_envelope_list_time_text"
            android:textSize="@dimen/red_envelope_list_time_textsize"
            android:text="4小時前"
            android:id="@+id/text_time"
            android:layout_below="@id/text_name"
            android:layout_alignLeft="@id/text_name"
            android:layout_alignRight="@id/text_name"/>


        <!-- 分隔線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="49dp"
            android:background="@color/red_envelope_divider"
            android:layout_below="@id/text_time"
            android:layout_marginTop="5dp"
            android:id="@+id/divider"/>

        <!-- 回覆按鈕 -->
        <Button
            style="@style/CommonButtonWithBackground"
            android:layout_width="56dp"
            android:layout_height="25dp"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:text="@string/reply"
            android:layout_below="@id/divider"
            android:layout_alignRight="@id/divider"
            android:layout_marginTop="17dp"
            android:id="@+id/button_reply"/>

        <!-- 紅包內容文字 -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_message"
            android:textColor="@color/red_envelope_list_time_text"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="start"
            android:text="內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容內容"
            android:layout_alignLeft="@id/divider"
            android:layout_alignRight="@id/text_time"
            android:layout_below="@id/divider"
            android:layout_marginTop="12dp"/>

    </RelativeLayout>
</FrameLayout>