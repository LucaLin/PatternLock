<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 分隔線與文字-轉出 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_red_popup_font_devider"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/account_transfer_from"
            android:textColor="@color/colorGrayPrimaryDark"
            android:textSize="@dimen/text_size_normal"/>
    </FrameLayout>

    <!-- 轉出資訊：頭像、名字、帳戶與轉帳金額 -->
    <include layout="@layout/fragment_sent_result_detail_list_item" />

    <!-- 分隔線與文字-轉入 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_red_popup_font_devider"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/account_transfer_to"
            android:textColor="@color/colorGrayPrimaryDark"
            android:textSize="@dimen/text_size_normal"/>
    </FrameLayout>

</LinearLayout>