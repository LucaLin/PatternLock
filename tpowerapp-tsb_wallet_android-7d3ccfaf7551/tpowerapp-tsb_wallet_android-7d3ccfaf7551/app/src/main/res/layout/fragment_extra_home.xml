<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 頁面內容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="5dp">
        <!-- 大頭圖像 -->
        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="@dimen/photo_size"
            android:layout_height="@dimen/photo_size"
            android:background="@drawable/img_default_avatar"
            android:layout_marginTop="@dimen/headline_vertical_margin"/>

        <!-- 鎖頭 or 錢包餘額 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <!-- 帳戶餘額 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/home_account_balance"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!-- 金額 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="$0"
                    android:visibility="gone"
                    android:id="@+id/text_balance"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"/>
                <!-- 鎖頭 -->
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_balance_lock"
                    android:id="@+id/button_locker"
                    android:background="?android:selectableItemBackground"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <!-- 箭頭圖示 -->
            <ImageButton
                android:id="@+id/button_sv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_balance_arrow"
                android:background="?selectableItemBackground"
                android:layout_marginLeft="7dp"/>
        </LinearLayout>


        <!-- 按鈕選單 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:divider="@drawable/sv_menu_divider_horizontal"
            android:paddingTop="10dp"
            android:background="@drawable/bg_main"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:showDividers="middle"
                android:divider="@drawable/sv_menu_divider_vertical">
                <!-- 紅包 -->
                <include layout="@layout/sv_home_menu_button"
                    android:id="@+id/btn_red_home"
                    style="@style/SVHomeMenuButton" />
                <!-- 優惠券 -->
                <include layout="@layout/sv_home_menu_button"
                    android:id="@+id/btn_coupon"
                    style="@style/SVHomeMenuButton" />
                <!-- 電子票券 -->
                <include layout="@layout/sv_home_menu_button"
                    android:id="@+id/btn_eticket"
                    style="@style/SVHomeMenuButton" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:showDividers="middle"
                android:divider="@drawable/sv_menu_divider_vertical">
                <!-- 賺取優惠 -->
                <include layout="@layout/sv_home_menu_button"
                    android:id="@+id/btn_earn_promotion"
                    style="@style/SVHomeMenuButton" />
                <!-- 商城 -->
                <include layout="@layout/sv_home_menu_button"
                    android:id="@+id/btn_store"
                    style="@style/SVHomeMenuButton" />
                <!-- 優惠活動 -->
                <include layout="@layout/sv_home_menu_button"
                    android:id="@+id/btn_promotion_act"
                    style="@style/SVHomeMenuButton" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
