<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_main">

    <!-- 大頭圖像 -->
    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/img_default_avatar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/headline_vertical_margin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/txt_to_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#404040"
            android:text="Anna Wu"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/txt_to_send_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#404040"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_amount_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 顯示收到的金額 -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <!-- 金額： -->
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:textSize="15sp"-->
                <!--android:textColor="#898989"-->
                <!--android:text="@string/received_amount"/>-->
            <!-- 祝福語 -->
            <TextView
                android:id="@+id/txt_received_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textColor="#898989"
                android:text="blessing message"

                android:includeFontPadding="false"/>


            <!-- 顯示收到的金額 -->
            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="#404040"
                android:text="$0"/>
        </LinearLayout>


    </LinearLayout>

    <!-- 字數統計 -->
    <TextView
        android:id="@+id/txt_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:textSize="@dimen/text_size_normal"
        android:textColor="#898989"
        android:text="0/50" />

    <!-- 回覆訊息的輸入框 -->
    <!-- 20160322加入兩行設定，讓虛擬鍵盤的enter可顯示為Done
        android:imeOptions="actionDone"
        android:inputType="text" -->
    <EditText
        android:id="@+id/txt_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_enter_min_height"
        android:layout_marginTop="5dp"
        android:gravity="top"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="14dp"
        android:background="@drawable/img_main_reply_dialog"
        android:textSize="@dimen/text_size_medium"
        android:textColor="#898989"
        android:hint="@string/sv_hint_enter_receipt_msg"
        android:textColorHint="#898989"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="@integer/blessing_maxlength"/>


    <!-- Spacing layout for the bottom button area -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <Button
        android:id="@+id/btn_action_1"
        android:text="@string/button_next_step"
        style="@style/SVButtonWithBackground" />

</LinearLayout>
