<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="18dp"
                android:textSize="20sp"
                android:textColor="@color/sv_result_title_success"
                android:text="@string/sv_result_title_success_receipt"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/img_main_big_card"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:textColor="#C2C2C2"
                    android:text="2016/11/19 16:49"/>

                <!-- 大頭圖像 -->
                <ImageView
                    android:id="@+id/img_photo"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/img_default_avatar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/headline_vertical_margin"/>

                <LinearLayout
                    android:id="@+id/lyt_name_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/txt_from_to_who"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:maxWidth="250dp"
                        android:textColor="@color/colorGrayPrimaryDark"
                        android:text="@string/sent_you"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/txt_from_to_who_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/colorGrayPrimaryDark"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_money_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:id="@+id/txt_dollar_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="6dp"
                        android:textSize="20sp"
                        android:textColor="@color/colorGrayPrimaryDark"
                        android:text="@string/dollar_sign"/>
                    <TextView
                        android:id="@+id/txt_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textSize="40sp"
                        android:textColor="@color/colorGrayPrimaryDark"
                        android:text="1,200"/>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/lyt_sv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp">
                    <ImageView
                        android:id="@+id/img_sv_result"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_main_pay_succeed"/>
                </FrameLayout>

                <!-- 祝福語和底線 -->
                <FrameLayout
                    android:id="@+id/lyt_sending_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="47.5dp"
                    android:layout_marginRight="47.5dp">

                    <!-- 文字的背景底線 -->
                    <tw.com.taishinbank.ewallet.view.TextViewWithUnderLine
                        android:id="@+id/txt_sending_msg_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/bottom_text"
                        android:textSize="16sp"
                        android:lines="@integer/red_envelope_sent_result_blessing_lines"
                        android:lineSpacingExtra="7dp"/>

                    <!-- 祝福語 -->
                    <TextView
                        android:id="@+id/txt_sending_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|top"
                        android:textSize="16sp"
                        android:textColor="@color/colorGrayPrimaryD"
                        android:text="一二三四五六七八九十...一二三四五六七八九十一二三四五六七八九十一二三四五六七八九十一二三四五六七八九十"
                        android:lines="@integer/red_envelope_sent_result_blessing_lines"
                        android:lineSpacingExtra="7dp"
                        android:ellipsize="end"/>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/lyt_sv_result_action_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="21dp"
                    android:visibility="gone">
                    <Button
                        android:id="@+id/btn_sv_result_action"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#959595"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_main_card_reply"
                        android:drawablePadding="0dp"
                        android:text="@string/sv_result_action_reply">
                    </Button>
                </LinearLayout>

                <!-- 錯誤訊息 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sv_result_title_failure"
                    android:textSize="@dimen/text_size_normal"
                    android:id="@+id/txt_error_message"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Spacing layout for the bottom button area -->
            <LinearLayout
                android:id="@+id/lyt_caution_area"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/txt_caution_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/txt_caution_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/bottom_text"
                    android:text="@string/sv_caution_title"/>

                <TextView
                    android:id="@+id/txt_caution_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="13dp"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/bottom_text"
                    android:text="@string/sv_caution_pay"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_action_1"
            android:text="@string/sv_home"
            style="@style/SVButtonWithBackgroundSmall"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_marginLeft="8dp"
            android:id="@+id/btn_action_2"
            android:text="@string/sv_account_history"
            style="@style/SVButtonWithBackgroundSmall"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
