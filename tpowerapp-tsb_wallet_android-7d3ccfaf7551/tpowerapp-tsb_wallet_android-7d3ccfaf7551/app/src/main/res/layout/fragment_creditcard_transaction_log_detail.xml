<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 背景 -->
    <!-- 灰白色底圖 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_main"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <!-- 頁面內容 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/bg_e_history_title">
                <TextView
                    android:id="@+id/txt_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/sv_trx_detail_sub_title_request"
                    android:textColor="#404040"
                    android:textSize="17sp"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_history_e_top"
                    android:layout_marginTop="-2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="28dp"
                    >

                    <!-- 頭像 -->
                    <ImageView
                        android:id="@+id/image_photo"
                        android:layout_width="@dimen/list_photo_size"
                        android:layout_height="@dimen/list_photo_size"
                        android:background="@drawable/img_default_photo_purple"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"/>

                    <!-- 上方送給誰或誰送的名字 -->
                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/image_photo"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/red_envelope_list_name_text"
                        android:textSize="@dimen/red_envelope_list_name_textsize"
                        android:text="Anita Wu送來紅包"
                        android:maxLines="2"
                        android:gravity="start"
                        android:ellipsize="end"/>

                    <!-- 尚未付款 -->

                    <!-- 右上方的金額 -->
                    <TextView
                        android:id="@+id/text_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_name"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="7dp"
                        android:minWidth="56dp"
                        android:text="$800"
                        android:textColor="@color/red_envelope_list_amount_text"
                        android:textSize="@dimen/red_envelope_list_amount_textsize"
                        android:gravity="right|center_vertical"/>

                    <!-- 第二排的時間 -->
                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_name"
                        android:layout_alignLeft="@id/text_name"
                        android:layout_toLeftOf="@id/text_amount"
                        android:layout_alignBottom="@id/text_amount"
                        android:gravity="bottom"
                        android:textColor="@color/red_envelope_list_time_text"
                        android:textSize="@dimen/red_envelope_list_time_textsize"
                        android:text="4小時前"/>

                    <!-- 分隔線 -->
                    <View
                        android:id="@+id/divider"
                        android:layout_below="@id/text_amount"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="49dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/red_envelope_divider"/>

                    <!-- Receipt 內容文字 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/divider"
                        android:layout_alignLeft="@id/divider"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp">
                        <LinearLayout
                            android:id="@+id/linearlayout_orderid_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/text_title_orderid"
                                style="@style/CreditTranDetailText"
                                android:text="@string/order_id_title_trans_history"/>
                            <TextView
                                android:id="@+id/text_order_id"
                                style="@style/CreditTranDetailText"
                                android:text="AAA123456"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearlayout_buydate_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/text_title_buydate"
                                style="@style/CreditTranDetailText"
                                android:text="@string/buy_date_title_trans_history"/>
                            <TextView
                                android:id="@+id/text_buy_date"
                                style="@style/CreditTranDetailText"
                                android:text="AAA123456"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearlayout_transdate_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/text_title_trandate"
                                style="@style/CreditTranDetailText"
                                android:text="@string/trans_date_title_trans_history"/>
                            <TextView
                                android:id="@+id/text_trans_date"
                                style="@style/CreditTranDetailText"
                                android:text="AAA123456"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearlayout_returndate_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/text_title_returndate"
                                style="@style/CreditTranDetailText"
                                android:text="@string/return_date_title_trans_history"/>
                            <TextView
                                android:id="@+id/text_return_date"
                                style="@style/CreditTranDetailText"
                                android:text="AAA123456"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearlayout_creditcard_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">
                            <TextView
                                android:id="@+id/text_title_cardname"
                                style="@style/CreditTranDetailText"
                                android:text="@string/use_cardname_title_trans_history" />
                            <TextView
                                android:id="@+id/text_cardname"
                                style="@style/CreditTranDetailText"
                                android:text="XXXX" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearlayout_store_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:id="@+id/text_title_storename_detail"
                                style="@style/CreditTranDetailText"
                                android:text="@string/storename_title_trans_history" />
                            <TextView
                                android:id="@+id/text_storename_detail"
                                style="@style/CreditTranDetailText"
                                android:text="XXXX\n0929" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearlayout_authid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/text_title_authid"
                                style="@style/CreditTranDetailText"
                                android:text="@string/authid_title_trans_history" />
                            <TextView
                                android:id="@+id/text_authid"
                                style="@style/CreditTranDetailText"
                                android:text="" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearlayout_tradeno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:visibility="gone">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:gravity="left">
                                <TextView
                                    android:id="@+id/text_title_tradeno"
                                    style="@style/CreditTranDetailText"
                                    android:text="@string/tradeno_title_trans_history" />
                                <TextView
                                    android:id="@+id/text_tradeno"
                                    style="@style/CreditTranDetailText"
                                    android:text=""
                                    android:singleLine="true" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/text_go_return"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:gravity="right"
                                android:linksClickable="true"
                                android:textColor="@color/red_envelope_list_time_text"
                                android:text="@string/i_do_return_history"
                                android:singleLine="true"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:text="@string/info_title_trans_history"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_size_normal"
                    android:text="@string/info_message_trans_history"/>

                <!-- 最下面的聯絡客服按鈕 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/button_customer_service"
                    android:layout_height="@dimen/button_height"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/fab_margin" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_call" />
                    <TextView
                        android:text="@string/sv_login_customer_service"
                        style="@style/CommonButtonNoBackground" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout_message_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:text="@string/info_title_trans_history"/>

                <TextView
                    android:id="@+id/text_message_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_size_normal"
                    android:text="@string/return_message_trans_history"/>

                <TextView
                    android:id="@+id/text_message_problem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_size_normal"
                    android:text="@string/info_message_for_ticket_trans_history"/>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
